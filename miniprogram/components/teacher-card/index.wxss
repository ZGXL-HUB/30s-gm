/* 教师端通用卡片组件样式 */
.teacher-card {
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
  overflow: hidden;
}

.teacher-card.clickable {
  cursor: pointer;
}

.teacher-card.clickable:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
}

.card-content {
  display: flex;
  align-items: center;
  padding: 25rpx;
}

.card-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.card-icon .icon {
  font-size: 28rpx;
}

.card-text {
  flex: 1;
}

.card-text .title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.card-text .subtitle {
  display: block;
  font-size: 22rpx;
  color: #666;
}

.card-arrow {
  margin-left: 15rpx;
}

.card-arrow .arrow {
  font-size: 28rpx;
  color: #999;
}
