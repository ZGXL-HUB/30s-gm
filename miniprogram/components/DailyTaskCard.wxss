/* 每日任务卡片组件样式 */

.daily-task-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 32rpx;
  margin: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 顶部切换栏 */
.segmented-control {
  display: flex;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 4rpx;
  margin-bottom: 24rpx;
}

.segmented-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 6rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.segmented-item.active {
  background: #fff;
  color: #007aff;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.2);
}

/* 卡片标题 */
.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  text-align: center;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 16rpx;
}

/* 题目列表 */
.question-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.question-item {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border-left: 4rpx solid #007aff;
}

.question-item:last-child {
  margin-bottom: 0;
}

.question-number {
  font-size: 24rpx;
  color: #007aff;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.question-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.question-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.question-category {
  font-size: 24rpx;
  color: #666;
  background: #e9ecef;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.question-difficulty {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 24rpx;
}

.refresh-btn {
  background: #007aff;
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 底部操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn.primary {
  background: #007aff;
  color: #fff;
}

.btn.secondary {
  background: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
}

.btn:active {
  opacity: 0.8;
}

/* 调试信息 */
.debug-info {
  margin-top: 24rpx;
  padding: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  border-left: 4rpx solid #ff9500;
}

.debug-title {
  font-size: 24rpx;
  color: #ff9500;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.debug-content {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 4rpx;
}

.debug-content:last-child {
  margin-bottom: 0;
}

/* 响应式设计 */
@media (max-width: 600rpx) {
  .daily-task-card {
    margin: 16rpx;
    padding: 24rpx;
  }
  
  .card-title {
    font-size: 28rpx;
  }
  
  .question-text {
    font-size: 26rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
}
