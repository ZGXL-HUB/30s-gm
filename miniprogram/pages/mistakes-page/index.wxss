.practice-card .progress-info {
  background: #f8f9fa;
  padding: 32rpx;
  border-radius: 16rpx;
  border-left: 4rpx solid #f5576c;
  word-break: break-word;
  overflow-wrap: break-word;
}

.practice-card .progress-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-word;
  overflow-wrap: break-word;
}

.practice-card .card-actions {
  display: flex;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

