/* 学生加入班级页面样式 */
.container {
  padding: 40rpx 30rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 输入区域 */
.input-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.invite-code-input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  text-align: center;
  letter-spacing: 8rpx;
  background: #f8f9fa;
}

.invite-code-input:focus {
  border-color: #667eea;
  background: #ffffff;
}

/* 按钮样式 */
.btn {
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
}

.btn-primary:disabled {
  background: #cccccc;
  color: #999999;
}

.btn-success {
  background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
  color: #ffffff;
  border: none;
}

.btn-outline {
  background: transparent;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.btn-block {
  width: 100%;
}

/* 班级信息预览 */
.class-preview {
  margin-bottom: 40rpx;
}

.preview-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.class-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.teacher-name {
  display: block;
  font-size: 26rpx;
  color: #666666;
}

.class-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.stat-item {
  text-align: center;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

/* 错误和成功消息 */
.error-message {
  background: #fff5f5;
  border: 1rpx solid #fed7d7;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.error-text {
  color: #e53e3e;
  font-size: 28rpx;
  text-align: center;
}

.success-message {
  background: #f0fff4;
  border: 1rpx solid #9ae6b4;
  border-radius: 12rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  text-align: center;
}

.success-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.success-text {
  display: block;
  color: #38a169;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

/* 帮助信息 */
.help-section {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.help-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.help-content {
  display: flex;
  flex-direction: column;
}

.help-item {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

/* 学生信息确认 */
.student-info-section {
  margin-bottom: 40rpx;
}

.info-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 40rpx;
  text-align: center;
}

.info-item {
  margin-bottom: 30rpx;
}

.info-label {
  display: block;
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.info-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #f8f9fa;
}

.info-input:focus {
  border-color: #667eea;
  background: #ffffff;
}

/* 头像选择 */
.avatar-btn {
  display: flex;
  align-items: center;
  background: transparent;
  border: none;
  padding: 0;
}

.avatar-preview {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #e0e0e0;
}

.avatar-text {
  font-size: 26rpx;
  color: #667eea;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 30rpx 20rpx;
  }
  
  .input-section {
    padding: 40rpx 30rpx;
  }
  
  .preview-card {
    padding: 30rpx;
  }
}
