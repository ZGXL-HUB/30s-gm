.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #8360c3 0%, #2ebf91 100%);
  min-height: 100vh;
}

/* 标题区域 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 卡片容器 */
.card-container {
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
  perspective: 1000px;
}

/* 卡片主体 */
.card {
  width: 600rpx;
  height: 400rpx;
  position: relative;
  transform-style: preserve-3d;
  transition: transform 0.6s;
  cursor: pointer;
}

.card.flipped {
  transform: rotateY(180deg);
}

/* 卡片正面和背面通用样式 */
.card-front, .card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 卡片正面 */
.card-front {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
}

/* 卡片背面 */
.card-back {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  transform: rotateY(180deg);
}

/* 卡片内容 */
.card-content {
  text-align: center;
  padding: 40rpx;
  width: 100%;
}

/* 问题文字 */
.question-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  line-height: 1.4;
}

/* 答案文字 */
.answer-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #27ae60;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  line-height: 1.4;
}

/* 进度指示器 */
.progress-indicator {
  text-align: center;
  margin-bottom: 60rpx;
}

.progress-dots {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  transition: all 0.3s;
}

.dot.active {
  background: white;
  transform: scale(1.2);
}

.progress-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 导航按钮 */
.navigation {
  display: flex;
  justify-content: space-between;
  gap: 40rpx;
  margin-bottom: 60rpx;
}

.nav-btn {
  flex: 1;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  color: white;
  font-size: 28rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s;
}

.nav-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.nav-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.nav-text {
  font-size: 28rpx;
}

/* 学习小贴士 */
.tips {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.tips-icon {
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.tips-content {
  color: white;
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.tips-text {
  font-size: 26rpx;
  line-height: 1.5;
  margin-bottom: 12rpx;
  opacity: 0.9;
} 