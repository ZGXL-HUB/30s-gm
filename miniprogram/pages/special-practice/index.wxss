.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  color: white;
}

.header-content {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.back-icon {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
}

.page-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 专项练习列表 */
.practice-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.practice-item {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.practice-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-bottom: 1rpx solid #e9ecef;
}

.practice-title {
  display: flex;
  align-items: center;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.progress-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.progress-status.normal {
  background: #e9ecef;
  color: #6c757d;
}

.progress-status.warning {
  background: #fff3cd;
  color: #856404;
}

.progress-status.urgent {
  background: #f8d7da;
  color: #721c24;
}

.status-text {
  font-weight: 500;
}

/* 练习内容 */
.practice-content {
  padding: 20rpx;
}

.table-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.table-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
}

.table-info {
  flex: 1;
}

.table-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.table-count {
  font-size: 24rpx;
  color: #666;
}

.start-btn {
  background: linear-gradient(135deg, #4096ff 0%, #1677ff 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(64, 150, 255, 0.3);
  transition: all 0.3s ease;
  border: 1rpx solid #4096ff;
}

.start-btn:active {
  background: linear-gradient(135deg, #1677ff 0%, #0958d9 100%);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(64, 150, 255, 0.4);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 底部提示 */
.footer-tip {
  margin-top: 40rpx;
  padding: 20rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 12rpx;
  text-align: center;
}

.tip-text {
  font-size: 26rpx;
  color: #667eea;
  line-height: 1.5;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }
  
  .header {
    padding: 30rpx 20rpx;
  }
  
  .practice-header {
    padding: 20rpx;
  }
  
  .table-item {
    padding: 15rpx;
  }
} 