.container {
  padding: 30rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
}

.title {
  font-size: 38rpx;
  font-weight: bold;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.rule-section {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #e9ecef;
}

.rule-header {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  padding: 24rpx 30rpx;
  border-bottom: 2rpx solid #45a049;
}

.rule-content {
  padding: 30rpx;
}

.rule-description {
  margin-bottom: 20rpx;
  line-height: 1.6;
  color: #495057;
  font-size: 28rpx;
}

.rule-point {
  margin: 8rpx 0;
  margin-left: 20rpx;
  color: #495057;
  font-size: 28rpx;
}

.examples {
  margin-bottom: 20rpx;
}

.example-item {
  margin: 8rpx 0;
  margin-left: 20rpx;
  color: #495057;
  font-size: 28rpx;
  padding: 8rpx 0;
}

.exceptions {
  background-color: #fff3cd;
  border: 1rpx solid #ffeaa7;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.exception-item {
  margin: 6rpx 0;
  color: #856404;
  font-size: 26rpx;
}

.note {
  background-color: #d1ecf1;
  border: 1rpx solid #bee5eb;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  color: #0c5460;
  font-size: 26rpx;
}

.bold {
  font-weight: bold;
  color: #2c3e50;
}

/* 表格样式 */
.table-container {
  border: 1rpx solid #dee2e6;
  border-radius: 8rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.table-header {
  display: flex;
  background-color: #4CAF50;
  color: white;
  font-weight: bold;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #dee2e6;
}

.table-row:last-child {
  border-bottom: none;
}

.table-row:nth-child(even) {
  background-color: #f8f9fa;
}

.table-cell {
  flex: 1;
  padding: 16rpx 12rpx;
  text-align: center;
  font-size: 24rpx;
  border-right: 1rpx solid #dee2e6;
  word-break: break-all;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60rpx;
}

.table-cell:last-child {
  border-right: none;
}

/* 记忆口诀样式 */
.memory-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.memory-section .rule-header {
  background: rgba(255, 255, 255, 0.2);
  color: white;
}

.memory-content {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.memory-line {
  font-size: 28rpx;
  line-height: 1.8;
  margin: 8rpx 0;
  color: white;
  font-weight: 500;
}

.tip {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 26rpx;
  line-height: 1.6;
  color: #f8f9fa;
  border-left: 4rpx solid #fff;
} 