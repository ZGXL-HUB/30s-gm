/* 书写规范表格优化样式 */

/* 1. 响应式表格容器优化 */
.interactive-table {
  margin-top: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  overflow: hidden;
  min-width: 100%;
  max-width: 100%;
  background: #f8f9fa;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 2. 表格单元格优化 */
.table-cell {
  flex: 1;
  min-width: 100rpx;
  padding: 20rpx 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid #e9ecef;
  font-size: 26rpx;
  text-align: center;
  word-break: break-word;
  word-wrap: break-word;
  overflow-wrap: break-word;
  box-sizing: border-box;
  overflow: hidden;
  min-height: 80rpx;
  max-width: 100%;
  white-space: normal;
  line-height: 1.5;
  background: white;
  transition: all 0.3s ease;
}

/* 3. 自适应输入框优化 */
.table-input {
  width: 100%;
  min-height: 80rpx;
  max-height: 200rpx;
  max-width: 100%;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  padding: 16rpx 12rpx;
  font-size: 26rpx;
  text-align: center;
  background-color: #fff;
  transition: all 0.3s ease;
  box-sizing: border-box;
  word-wrap: break-word;
  overflow-wrap: break-word;
  white-space: normal;
  line-height: 1.5;
  resize: vertical;
}

.table-input:focus {
  border-color: #1890ff;
  box-shadow: 0 0 0 2rpx rgba(24, 144, 255, 0.2);
  outline: none;
}

/* 4. 状态反馈优化 */
.table-input.correct {
  background: linear-gradient(135deg, #e8f5e8 0%, #f0f9ff 100%);
  border-color: #52c41a;
  color: #389e0d;
  transform: scale(1.02);
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.15);
}

.table-input.wrong {
  background: linear-gradient(135deg, #fff2f0 0%, #fff1f0 100%);
  border-color: #ff4d4f;
  color: #cf1322;
  animation: shake 0.5s ease-in-out;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-4rpx); }
  75% { transform: translateX(4rpx); }
}

/* 5. 表格头部优化 */
.table-row.table-header {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  color: white;
  font-weight: 600;
}

.table-row.table-header .table-cell {
  background: transparent;
  color: white;
  font-size: 28rpx;
  min-height: 100rpx;
}

/* 6. 规则提示优化 */
.clickable-rule {
  cursor: pointer;
  transition: all 0.3s ease;
  padding: 8rpx 12rpx;
  border-radius: 6rpx;
  background: rgba(24, 144, 255, 0.05);
}

.clickable-rule:active {
  background: rgba(24, 144, 255, 0.1);
  transform: scale(0.98);
}

.lightbulb {
  font-size: 24rpx;
  margin-right: 8rpx;
  transition: color 0.3s ease;
}

.rule-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 7. 进度指示器 */
.table-progress {
  margin: 20rpx 0;
  padding: 0 20rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #52c41a 0%, #73d13d 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  text-align: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 8. 移动端优化 */
@media screen and (max-width: 750rpx) {
  .table-cell {
    min-width: 80rpx;
    padding: 16rpx 8rpx;
    font-size: 24rpx;
  }
  
  .table-input {
    font-size: 24rpx;
    padding: 12rpx 8rpx;
  }
  
  .table-row.table-header .table-cell {
    font-size: 26rpx;
  }
}

/* 9. 动画效果 */
.table-cell:hover {
  background: #f8f9fa;
  transform: translateY(-1rpx);
}

.table-input:not(.correct):not(.wrong):hover {
  border-color: #40a9ff;
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.1);
}

/* 10. 加载状态 */
.table-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 11. 撤销/重做按钮样式 */
.undo-btn, .redo-btn {
  background-color: #f0f0f0;
  color: #666;
  border: 1rpx solid #d9d9d9;
}

.undo-btn:active, .redo-btn:active {
  background-color: #e6f7ff;
  color: #1890ff;
  border-color: #91d5ff;
}

.undo-btn:disabled, .redo-btn:disabled {
  background-color: #f5f5f5;
  color: #bfbfbf;
  border-color: #d9d9d9;
  opacity: 0.6;
}

/* 12. 表格容器优化 */
.table-container {
  margin: 20rpx 0;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.table-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  padding: 24rpx 20rpx 16rpx 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-bottom: 1rpx solid #e9ecef;
}
