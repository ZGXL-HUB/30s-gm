.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #e8f5e8 0%, #f0f9ff 100%);
  padding: 0;
}

.header {
  background: linear-gradient(135deg, #10b981 0%, #06b6d4 100%);
  padding: 40rpx 30rpx 50rpx 30rpx;
  text-align: center;
  color: white;
  box-shadow: 0 4rpx 20rpx rgba(16, 185, 129, 0.3);
}

.main-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.content {
  padding: 30rpx 20rpx 40rpx 20rpx;
}

.rule-section {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  border: 1rpx solid rgba(16, 185, 129, 0.1);
}

.rule-header {
  background: linear-gradient(135deg, #ecfdf5 0%, #f0f9ff 100%);
  padding: 25rpx 30rpx;
  border-bottom: 2rpx solid #d1fae5;
  display: flex;
  align-items: center;
}

.rule-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #10b981;
  margin-right: 10rpx;
}

.rule-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #065f46;
  flex: 1;
}

.rule-description {
  padding: 25rpx 30rpx 20rpx 30rpx;
  background: #fefefe;
}

.rule-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #374151;
}

.examples {
  padding: 0 30rpx 30rpx 30rpx;
  background: #fefefe;
}

.examples-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #059669;
  display: block;
  margin-bottom: 20rpx;
}

.example-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.example-item {
  background: #f0fdf4;
  border-radius: 12rpx;
  padding: 18rpx 20rpx;
  border-left: 4rpx solid #10b981;
  transition: all 0.3s ease;
}

.example-item:hover {
  background: #dcfce7;
  transform: translateX(5rpx);
}

.example-text {
  font-size: 26rpx;
  line-height: 1.5;
  color: #166534;
  font-family: 'Courier New', monospace;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .header {
    padding: 30rpx 20rpx 40rpx 20rpx;
  }
  
  .main-title {
    font-size: 36rpx;
  }
  
  .subtitle {
    font-size: 26rpx;
  }
  
  .content {
    padding: 20rpx 15rpx 30rpx 15rpx;
  }
  
  .rule-header {
    padding: 20rpx 25rpx;
  }
  
  .rule-number, .rule-title {
    font-size: 28rpx;
  }
  
  .rule-description, .examples {
    padding-left: 25rpx;
    padding-right: 25rpx;
  }
} 