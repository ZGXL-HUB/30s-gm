<!--进阶之旅页面 - 7天学习路径-->
<view class="container">
  <!-- 页面头部 -->
  <view class="page-header">
    <view class="header-nav" bindtap="goBack">
      <view class="nav-icon">←</view>
      <view class="nav-text">返回</view>
    </view>
    <view class="header-content">
      <view class="header-title">未来7天学习路径</view>
      <view class="header-subtitle">专项攻坚，稳步提升</view>
    </view>
    <view class="header-refresh" bindtap="refreshPlan">刷新</view>
  </view>

  <!-- 学习概览卡片 -->
  <view class="overview-card" bindtap="viewOverallSuggestion">
    <view class="overview-header">
      <view class="overview-icon">🎯</view>
      <view class="overview-title">学习概览</view>
    </view>
    <view class="overview-content">
      <view class="target-info">
        <view class="target-label">目标正确率</view>
        <view class="target-value">{{targetAccuracy}}%</view>
      </view>
      <view class="weak-points-info">
        <view class="weak-label">主要薄弱点</view>
        <view class="weak-count">{{weakPoints.length}}个</view>
      </view>
    </view>
    <view class="overview-arrow">></view>
  </view>

  <!-- 7天学习计划列表 -->
  <view class="plan-section">
    <view class="section-title">
      <view class="title-icon">📅</view>
      <view class="title-text">7天学习计划</view>
    </view>

    <view class="plan-list" wx:if="{{sevenDayPlan.length > 0}}">
      <view 
        class="plan-item" 
        wx:for="{{sevenDayPlan}}" 
        wx:key="day"
        bindtap="viewLearningDetail"
        data-day="{{index}}"
      >
        <view class="plan-header">
          <view class="day-tag">Day{{index + 1}}</view>
          <view class="plan-status" wx:if="{{index === 0}}">今日</view>
          <view class="plan-status completed" wx:elif="{{index < 0}}">已完成</view>
          <view class="plan-status pending" wx:else>待完成</view>
        </view>
        
        <view class="plan-content">
          <view class="plan-focus">{{item.content}}</view>
          <view class="plan-target">{{item.target}}</view>
        </view>
        
        <view class="plan-actions">
          <view class="action-btn" 
                bindtap="startSpecialPractice" 
                data-day="{{index}}"
                catchtap="stopPropagation">
            开始练习
          </view>
          <view class="plan-arrow">></view>
        </view>
      </view>
    </view>

    <!-- 空状态 -->
    <view class="empty-state" wx:else>
      <view class="empty-icon">📚</view>
      <view class="empty-text">暂无学习计划</view>
      <view class="empty-desc">请先完成能力测试</view>
    </view>
  </view>

  <!-- 学习提示卡片 -->
  <view class="tips-card">
    <view class="tips-header">
      <view class="tips-icon">💡</view>
      <view class="tips-title">学习提示</view>
    </view>
    <view class="tips-content">
      <view class="tip-item">• 每天专注一个薄弱点进行专项练习</view>
      <view class="tip-item">• 保持连续学习，循序渐进</view>
      <view class="tip-item">• 定期回顾，巩固学习效果</view>
      <view class="tip-item">• 根据学习进度调整练习强度</view>
    </view>
  </view>

  <!-- 加载状态 -->
  <view class="loading-overlay" wx:if="{{loading}}">
    <view class="loading-content">
      <view class="loading-spinner"></view>
      <view class="loading-text">加载中...</view>
    </view>
  </view>
</view>
