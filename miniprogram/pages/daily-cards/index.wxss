/* 每日卡片系统页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 头部信息 */
.header-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.user-level {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.streak-info {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  color: white;
  padding: 12rpx 20rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.streak-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.progress-section {
  text-align: center;
}

.progress-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.progress-bar {
  background: #e9ecef;
  height: 12rpx;
  border-radius: 6rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
}

.progress-fill {
  background: linear-gradient(90deg, #28a745, #20c997);
  height: 100%;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 22rpx;
  color: #666;
}

/* 卡片区域 */
.cards-section {
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.refresh-btn {
  font-size: 28rpx;
  color: white;
  padding: 10rpx;
  opacity: 0.8;
}

.refresh-btn:active {
  opacity: 1;
  transform: rotate(180deg);
  transition: transform 0.3s ease;
}

.cards-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 每日卡片样式 */
.daily-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 25rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.daily-card.unlocked {
  border: 2rpx solid #28a745;
}

.daily-card.completed {
  background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
  border-color: #28a745;
}

.daily-card.locked {
  opacity: 0.6;
  border: 2rpx solid #e9ecef;
}

.daily-card:active {
  transform: scale(0.98);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-icon {
  font-size: 40rpx;
}

.card-order {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

.card-content {
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.card-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 15rpx;
}

.card-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.difficulty-badge {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: white;
}

.difficulty-easy {
  background: linear-gradient(135deg, #28a745, #20c997);
}

.difficulty-medium {
  background: linear-gradient(135deg, #ffc107, #ff8f00);
}

.difficulty-hard {
  background: linear-gradient(135deg, #dc3545, #c82333);
}

.time-info {
  font-size: 22rpx;
  color: #666;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.xp-reward {
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.card-status {
  font-size: 24rpx;
  font-weight: bold;
}

.status-completed {
  color: #28a745;
}

.status-unlocked {
  color: #667eea;
}

.status-locked {
  color: #999;
}

/* 锁定遮罩 */
.lock-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
}

.lock-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.unlock-condition {
  color: white;
  font-size: 22rpx;
  text-align: center;
  padding: 0 20rpx;
}

/* 完成遮罩 */
.complete-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(40, 167, 69, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
}

.complete-icon {
  font-size: 48rpx;
}

/* 底部操作 */
.bottom-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.action-btn {
  flex: 1;
  border: none;
  border-radius: 25rpx;
  padding: 25rpx;
  font-size: 26rpx;
  font-weight: bold;
  text-align: center;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.action-btn.secondary {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
}

/* 卡片详情弹窗 */
.card-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10rpx);
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  position: relative;
  z-index: 1001;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
  text-align: center;
}

.detail-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.detail-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 30rpx;
}

.detail-info {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 24rpx;
  color: #666;
}

.info-value {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

.xp-value {
  color: #ff6b35;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  border: none;
  border-radius: 25rpx;
  padding: 25rpx;
  font-size: 26rpx;
  font-weight: bold;
  text-align: center;
}

.modal-btn.primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.modal-btn.secondary {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
}

.loading-text {
  font-size: 28rpx;
  color: white;
  opacity: 0.8;
}

/* 响应式设计 */
@media (max-width: 350px) {
  .header-section {
    padding: 25rpx;
  }
  
  .daily-card {
    padding: 20rpx;
  }
  
  .modal-content {
    margin: 20rpx;
  }
}

@media (min-width: 400px) {
  .cards-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }
  
  .bottom-actions {
    max-width: 600rpx;
    margin: 30rpx auto 0;
  }
}
