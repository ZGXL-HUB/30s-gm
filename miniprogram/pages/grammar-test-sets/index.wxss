/* pages/grammar-test-sets/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #666;
  font-size: 28rpx;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.header-left {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
}

.back-btn {
  color: #667eea;
  font-size: 28rpx;
  padding: 10rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 测试类型选择界面 */
.type-selection {
  padding: 20rpx;
}

.type-options {
  margin-top: 40rpx;
}

.type-option {
  display: flex;
  align-items: center;
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.type-option:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.15);
}

.type-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
}

.type-info {
  flex: 1;
}

.type-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.type-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
}

.type-arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 20rpx;
}

/* 测试套题列表 */
.test-sets {
  padding: 20rpx;
}

.test-sets-list {
  margin-top: 20rpx;
}

.test-set-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.test-set-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.15);
}

.set-info {
  flex: 1;
}

.set-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.set-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.set-count {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.set-arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 20rpx;
}
