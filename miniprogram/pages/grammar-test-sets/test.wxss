/* pages/grammar-test-sets/test.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading {
  text-align: center;
  padding: 200rpx 0;
  color: #999;
}

.test-content {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.set-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.progress {
  font-size: 28rpx;
  color: #666;
  background-color: #f0f0f0;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.question-container {
  margin-bottom: 40rpx;
}

.question-tag {
  margin-bottom: 20rpx;
}

.question-tag text {
  background-color: #e3f2fd;
  color: #1976d2;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.question-text {
  margin-bottom: 30rpx;
}

.question-text text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
}

.answer-input {
  margin-bottom: 30rpx;
}

.input-field {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.input-field:focus {
  border-color: #1976d2;
}

.navigation {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.nav-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}

.prev-btn {
  background-color: #f5f5f5;
  color: #666;
}

.prev-btn:disabled {
  background-color: #f0f0f0;
  color: #ccc;
}

.next-btn {
  background-color: #1976d2;
  color: #fff;
}

.next-btn:disabled {
  background-color: #ccc;
  color: #999;
}

.result-content {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  text-align: center;
}

.result-header {
  margin-bottom: 40rpx;
}

.result-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.result-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.score-display {
  margin-bottom: 50rpx;
  padding: 40rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.score-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.score-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1976d2;
  margin-bottom: 10rpx;
}

.score-percentage {
  display: block;
  font-size: 32rpx;
  color: #666;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}

.retry-btn {
  background-color: #1976d2;
  color: #fff;
}

.back-btn {
  background-color: #f5f5f5;
  color: #666;
}

/* 新增：解析部分样式 */
.analysis-section {
  margin: 40rpx 0;
  text-align: left;
}

.analysis-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.question-analysis {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 25rpx;
  margin-bottom: 25rpx;
  border-left: 4rpx solid #1976d2;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.question-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.question-result {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.question-result.correct {
  background-color: #4caf50;
  color: white;
}

.question-result.incorrect {
  background-color: #f44336;
  color: white;
}

.question-content {
  margin-bottom: 20rpx;
}

.question-content .question-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 0;
}

.answer-comparison {
  margin-bottom: 20rpx;
}

.answer-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.answer-label {
  font-size: 26rpx;
  color: #666;
  width: 140rpx;
  flex-shrink: 0;
}

.answer-value {
  font-size: 26rpx;
  font-weight: bold;
}

.correct-answer {
  color: #4caf50;
}

.wrong-answer {
  color: #f44336;
}

.analysis-content {
  padding-top: 15rpx;
  border-top: 1rpx solid #e0e0e0;
}

.analysis-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.analysis-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}
