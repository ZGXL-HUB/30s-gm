/* 大屏幕优化 */
@media (min-width: 400px) {
  .category-list {
    max-width: 750rpx;
    margin: 0 auto;
  }
  
  .sub-categories-wrapper {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
  }
  
  .hint-bar {
    grid-column: 1 / -1;
  }
  
  .bottom-bar {
    max-width: 750rpx;
    margin: 24rpx auto;
  }
}

/* 超大屏幕优化 */
@media (min-width: 500px) {
  .sub-categories-wrapper {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .container {
    max-width: 800rpx;
    margin: 0 auto;
  }
} 