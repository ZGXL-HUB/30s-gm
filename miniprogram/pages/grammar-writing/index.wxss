/* miniprogram/pages/grammar-writing/index.wxss */ 

/* 全局容器 - 添加渐变背景 */
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
}


.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="75" cy="75" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="50" cy="10" r="0.5" fill="rgba(255,255,255,0.05)"/><circle cx="10" cy="60" r="0.5" fill="rgba(255,255,255,0.05)"/><circle cx="90" cy="40" r="0.5" fill="rgba(255,255,255,0.05)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  opacity: 0.3;
  pointer-events: none;
}

/* 顶部标题 - 现代化设计 */
.header {
  padding: 32rpx 24rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
  text-align: center;
  position: relative;
  z-index: 10;
  border-radius: 0 0 24rpx 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  font-weight: 400;
}

/* 云开发状态提示 - 毛玻璃效果 */
.cloud-status {
  padding: 20rpx 24rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
  margin: 0 16rpx;
  border-radius: 20rpx;
  margin-top: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.status-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 12rpx 0;
}

.status-icon {
  font-size: 32rpx;
  color: #4096ff;
}

.status-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.5;
  font-weight: 500;
}

/* 主滚动区 */
.main-content {
  flex: 1;
  padding: 16rpx;
  padding-bottom: 160rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 5;
}

.category-list {
  padding: 0;
}

/* 分类父节点 - 现代化卡片设计 */
.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 28rpx;
  background: rgba(255, 255, 255, 1); /* 100%不透明，突出重要性 */
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.category-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.category-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.15);
}

.category-item:active::before {
  transform: scaleX(1);
}

.category-title-wrapper {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.category-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  letter-spacing: 0.5rpx;
}

.category-count {
  font-size: 24rpx;
  color: #fff;
  font-weight: 600;
  background: linear-gradient(135deg, #4096ff 0%, #1677ff 100%);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(64, 150, 255, 0.3);
}



/* 子节点容器 - 平滑动画 */
.sub-categories-wrapper {
  max-height: 0;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  opacity: 0;
  transform: translateY(-10rpx);
}

.sub-categories-wrapper.expanded {
  max-height: 2000rpx;
  opacity: 1;
  transform: translateY(0);
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

.sub-category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.85); /* 85%不透明度，区分层次 */
  backdrop-filter: blur(15rpx);
  padding: 28rpx 28rpx 28rpx 60rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
  position: relative;
  border-radius: 0;
  cursor: pointer;
}

.sub-category-item:last-child {
  border-bottom: none;
  border-radius: 0 0 24rpx 24rpx;
}

.sub-category-item:active {
  background: rgba(255, 255, 255, 0.95);
  transform: translateX(4rpx);
}

/* 添加悬停效果，提示用户可以点击 */
.sub-category-item:hover {
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.sub-category-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.sub-category-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  letter-spacing: 0.3rpx;
}

.table-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.selection-control {
  display: flex;
  align-items: center;
}

.select-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #f0f0f0 0%, #e0e0e0 100%);
  color: #666;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid transparent;
}

.select-btn.selected {
  background: linear-gradient(135deg, #4096ff 0%, #1677ff 100%);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(64, 150, 255, 0.4);
  transform: scale(1.1);
}

.select-btn:active {
  transform: scale(0.95);
}

.select-icon {
  font-weight: bold;
  transition: all 0.2s ease;
}

/* 操作按钮区域 - 现代化设计 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 60rpx;
  background: rgba(255, 255, 255, 0.8); /* 80%不透明度，表示辅助功能 */
  backdrop-filter: blur(15rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  border-radius: 0 0 24rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 600;
  letter-spacing: 0.5rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.action-btn:active::before {
  left: 100%;
}

.hint-btn {
  background: linear-gradient(135deg, #fff7e6 0%, #ffe7ba 100%);
  color: #d46b08;
  border: 1rpx solid #ffd591;
}

.hint-btn:active {
  background: linear-gradient(135deg, #ffe7ba 0%, #ffd591 100%);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(250, 140, 22, 0.3);
}

.answer-btn {
  background: linear-gradient(135deg, #f6ffed 0%, #d9f7be 100%);
  color: #389e0d;
  border: 1rpx solid #b7eb8f;
}

.answer-btn:active {
  background: linear-gradient(135deg, #d9f7be 0%, #b7eb8f 100%);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-weight: 600;
}

/* 底部操作栏 - 适配新的导航栏 */
.bottom-bar {
  display: flex;
  align-items: center;
  gap: 24rpx;
  height: auto;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 24rpx 32rpx;
  margin: 24rpx 0;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
}

.total-box {
  flex: 1;
  font-size: 30rpx;
  color: #555;
  line-height: 1.5;
  min-width: 0;
  flex-shrink: 1;
  font-weight: 500;
}

.count {
  color: #4096ff;
  font-weight: 700;
  font-size: 36rpx;
  text-shadow: 0 2rpx 4rpx rgba(64, 150, 255, 0.2);
}

.actions {
  display: flex;
  gap: 16rpx;
  flex-shrink: 0;
}

.bar-btn {
  padding: 20rpx 32rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  min-width: 120rpx;
  max-width: 160rpx;
  text-align: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
  letter-spacing: 0.5rpx;
  position: relative;
  overflow: hidden;
}

.bar-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.bar-btn:active::before {
  left: 100%;
}

.clear-btn {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  color: #6c757d;
  border: 1rpx solid #dee2e6;
}

.clear-btn:active {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(108, 117, 125, 0.3);
}

.clear-btn[disabled] {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  color: #adb5bd;
  border-color: #e9ecef;
  box-shadow: none;
  opacity: 0.6;
}

.start-btn {
  background: linear-gradient(135deg, #4096ff 0%, #1677ff 100%);
  color: #fff;
  border: 1rpx solid #4096ff;
  box-shadow: 0 6rpx 20rpx rgba(64, 150, 255, 0.3);
}

.start-btn:active {
  background: linear-gradient(135deg, #1677ff 0%, #0958d9 100%);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(64, 150, 255, 0.4);
}

.start-btn[disabled] {
  background: linear-gradient(135deg, #d9d9d9 0%, #bfbfbf 100%);
  color: #fff;
  border-color: #d9d9d9;
  box-shadow: none;
  opacity: 0.6;
}

/* 弹窗样式 - 现代化设计 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(8rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  width: 85%;
  max-width: 650rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 20rpx 80rpx rgba(0, 0, 0, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: slideUp 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 28rpx 28rpx 0 0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  letter-spacing: 0.5rpx;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  cursor: pointer;
  transition: all 0.2s ease;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.modal-close:active {
  background: rgba(0, 0, 0, 0.1);
  color: #666;
}

.modal-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 提示选项样式 - 现代化设计 */
.hint-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.hint-option {
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 20rpx;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.hint-option:active {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.hint-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  letter-spacing: 0.3rpx;
}

/* 答案表格样式 - 现代化设计 */
.answer-modal {
  width: 92%;
  max-width: 850rpx;
}

.answer-table {
  border: 1rpx solid #e9ecef;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.table-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-bottom: 1rpx solid #e9ecef;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #e9ecef;
  transition: background-color 0.2s ease;
}

.table-row:hover {
  background: rgba(102, 126, 234, 0.05);
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  flex: 1;
  padding: 20rpx 16rpx;
  font-size: 26rpx;
  text-align: center;
  border-right: 1rpx solid #e9ecef;
  word-break: break-all;
  font-weight: 500;
}

.table-cell:last-child {
  border-right: none;
}

.header-cell {
  font-weight: 700;
  color: #fff;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 提示按钮样式 - 统一现代化设计 */
.noun-hint-bar,
.verb-hint-bar,
.tense-hint-bar,
.voice-hint-bar,
.comparison-hint-bar,
.adverb-hint-bar {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
  justify-content: center;
  margin: 24rpx 60rpx;
  padding: 24rpx 0;
  background: rgba(255, 255, 255, 0.8); /* 80%不透明度，表示辅助功能 */
  backdrop-filter: blur(15rpx);
  border-radius: 0 0 24rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.noun-hint-btn,
.verb-hint-btn,
.tense-hint-btn,
.voice-hint-btn,
.comparison-hint-btn,
.adverb-hint-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  letter-spacing: 0.5rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.noun-hint-btn::before,
.verb-hint-btn::before,
.tense-hint-btn::before,
.voice-hint-btn::before,
.comparison-hint-btn::before,
.adverb-hint-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.noun-hint-btn:active::before,
.verb-hint-btn:active::before,
.tense-hint-btn:active::before,
.voice-hint-btn:active::before,
.comparison-hint-btn:active::before,
.adverb-hint-btn:active::before {
  left: 100%;
}

.noun-hint-btn {
  background: linear-gradient(135deg, #fff7e6 0%, #ffe7ba 100%);
  color: #d46b08;
  border: 1rpx solid #ffd591;
}

.noun-hint-btn:active {
  background: linear-gradient(135deg, #ffe7ba 0%, #ffd591 100%);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(250, 140, 22, 0.3);
}

.verb-hint-btn {
  background: linear-gradient(135deg, #f6ffed 0%, #d9f7be 100%);
  color: #389e0d;
  border: 1rpx solid #b7eb8f;
}

.verb-hint-btn:active {
  background: linear-gradient(135deg, #d9f7be 0%, #b7eb8f 100%);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.tense-hint-btn {
  background: linear-gradient(135deg, #f0f5ff 0%, #bae7ff 100%);
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

.tense-hint-btn:active {
  background: linear-gradient(135deg, #bae7ff 0%, #91d5ff 100%);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.voice-hint-btn {
  background: linear-gradient(135deg, #fff2e8 0%, #ffd591 100%);
  color: #fa8c16;
  border: 1rpx solid #ffd591;
}

.voice-hint-btn:active {
  background: linear-gradient(135deg, #ffd591 0%, #ffa940 100%);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(250, 140, 22, 0.3);
}

.comparison-hint-btn {
  background: linear-gradient(135deg, #fff0f6 0%, #ffd6e7 100%);
  color: #eb2f96;
  border: 1rpx solid #ffadd2;
}

.comparison-hint-btn:active {
  background: linear-gradient(135deg, #ffd6e7 0%, #ffadd2 100%);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(235, 47, 150, 0.3);
}

.adverb-hint-btn {
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
  color: #10b981;
  border: 1rpx solid #a7f3d0;
}

.adverb-hint-btn:active {
  background: linear-gradient(135deg, #dcfce7 0%, #a7f3d0 100%);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

.noun-hint-icon,
.verb-hint-icon,
.tense-hint-icon,
.voice-hint-icon,
.comparison-hint-icon,
.adverb-hint-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .action-buttons {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .answer-modal {
    width: 95%;
  }
  
  .table-cell {
    font-size: 24rpx;
    padding: 16rpx 12rpx;
  }
  
  .bottom-bar {
    padding: 20rpx 24rpx;
  }
  
  .bar-btn {
    padding: 18rpx 28rpx;
    font-size: 28rpx;
    min-width: 100rpx;
    max-width: 140rpx;
  }
  
  .total-box {
    font-size: 28rpx;
  }
  
  .count {
    font-size: 32rpx;
  }
}

@media (max-width: 600rpx) {
  .bottom-bar {
    padding: 16rpx 20rpx;
  }
  
  .bar-btn {
    padding: 16rpx 24rpx;
    font-size: 26rpx;
    min-width: 90rpx;
    max-width: 120rpx;
  }
  
  .actions {
    gap: 12rpx;
  }
  
  .total-box {
    font-size: 26rpx;
  }
  
  .count {
    font-size: 30rpx;
  }
  
  .category-item {
    padding: 28rpx 24rpx;
  }
  
  .category-name {
    font-size: 30rpx;
  }
  
  .sub-category-item {
    padding: 20rpx 24rpx 20rpx 50rpx;
  }
  
  .noun-hint-bar,
  .verb-hint-bar,
  .tense-hint-bar,
  .voice-hint-bar,
  .comparison-hint-bar,
  .adverb-hint-bar {
    flex-direction: column;
    gap: 12rpx;
    margin: 20rpx 50rpx;
