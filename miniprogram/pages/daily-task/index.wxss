/* 每日任务页面样式 */

.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 32rpx 40rpx;
  color: #fff;
  text-align: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 调试操作区域 */
.debug-section {
  background: #fff;
  margin: 24rpx;
  padding: 32rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.debug-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.debug-buttons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.debug-buttons:last-child {
  margin-bottom: 0;
}

.debug-btn {
  flex: 1;
  background: #f8f9fa;
  color: #666;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.debug-btn:active {
  background: #e9ecef;
  transform: scale(0.98);
}

/* 状态信息 */
.status-info {
  background: #fff;
  margin: 24rpx;
  padding: 32rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.status-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.status-item:last-child {
  border-bottom: none;
}

.status-label {
  font-size: 26rpx;
  color: #666;
}

.status-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 响应式设计 */
@media (max-width: 600rpx) {
  .page-header {
    padding: 40rpx 24rpx 32rpx;
  }
  
  .page-title {
    font-size: 32rpx;
  }
  
  .page-subtitle {
    font-size: 24rpx;
  }
  
  .debug-section,
  .status-info {
    margin: 16rpx;
    padding: 24rpx;
  }
  
  .debug-buttons {
    flex-direction: column;
  }
  
  .debug-btn {
    margin-bottom: 12rpx;
  }
}
