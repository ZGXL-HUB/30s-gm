/* 完整的教师端班级管理页面样式 */

.teacher-class {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 标签页导航 */
.tab-nav {
  display: flex;
  background: white;
  border-bottom: 1rpx solid #e0e0e0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #667eea;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #667eea;
  border-radius: 2rpx;
}

/* 内容区域 */
.tab-content {
  padding: 20rpx;
}

/* 页面头部 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

/* 按钮样式 */
.btn {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.btn-outline {
  background: transparent;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.btn-secondary {
  background: #f0f0f0;
  color: #666;
}

.btn-primary {
  background: #667eea;
  color: white;
}

.btn-warning {
  background: #ff4d4f;
  color: white;
}

.btn-refresh {
  background: #667eea;
  color: white;
}

.btn-icon {
  font-size: 24rpx;
}

/* 班级列表 */
.classes-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.class-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.class-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.class-info {
  margin-bottom: 16rpx;
}

.class-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.teacher {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-active {
  background: #e8f5e8;
  color: #52c41a;
}

.status-inactive {
  background: #fff2e8;
  color: #fa8c16;
}

.class-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  padding: 16rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.number {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
}

.label {
  font-size: 22rpx;
  color: #999;
}

.class-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.class-actions .btn {
  width: 100%;
  justify-content: center;
}

/* 邀请码信息 */
.invite-info {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.invite-code-display {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.invite-label {
  font-size: 24rpx;
  color: #666;
}

.invite-code {
  font-size: 24rpx;
  color: #667eea;
  font-weight: bold;
  background: #f0f2ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.btn-copy {
  background: #667eea;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  border: none;
}

.invite-expiry {
  font-size: 22rpx;
  color: #999;
}

/* 学生管理样式 */
.students-stats {
  margin-bottom: 20rpx;
  padding: 16rpx 20rpx;
  background: white;
  border-radius: 12rpx;
}

.stats-text {
  font-size: 28rpx;
  color: #666;
}

.students-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.student-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.student-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.student-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.student-info {
  flex: 1;
}

.student-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.student-id {
  font-size: 24rpx;
  color: #999;
}

.student-class {
  margin-bottom: 12rpx;
}

.class-label {
  font-size: 26rpx;
  color: #666;
}

.class-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.student-contact {
  margin-bottom: 16rpx;
}

.contact-text {
  font-size: 24rpx;
  color: #999;
}

.student-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 16rpx;
  padding: 16rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.stat-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
}

.weak-points {
  margin-top: 16rpx;
}

.weak-points-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.points-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.point-tag {
  background: #fff2e8;
  color: #fa8c16;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #ccc;
}

.empty-students {
  text-align: center;
  padding: 60rpx 0;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal {
  background: white;
  border-radius: 16rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
}

.share-image-modal {
  max-width: 800rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 24rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 表单样式 */
.form-item {
  margin-bottom: 24rpx;
}

/* 标签组样式 */
.tag-group {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 12rpx;
}

.semester-tags {
  gap: 8rpx;
}

.tag {
  padding: 12rpx 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #6c757d;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.tag.active {
  background: #667eea;
  border-color: #667eea;
  color: white;
}

.tag:not(.active):hover {
  border-color: #667eea;
  color: #667eea;
}

/* Excel上传区域样式 */
.excel-upload-area {
  border: 2rpx dashed #d1d5db;
  border-radius: 12rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  background: #f9fafb;
  margin-top: 12rpx;
  transition: all 0.3s ease;
}

.excel-upload-area:active {
  background: #f3f4f6;
  border-color: #667eea;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.upload-text {
  display: block;
  font-size: 28rpx;
  color: #374151;
  margin-bottom: 8rpx;
}

.upload-hint {
  font-size: 22rpx;
  color: #9ca3af;
}

.uploaded-file {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #e7f3ff;
  border: 1rpx solid #b3d9ff;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  margin-top: 12rpx;
}

.file-name {
  font-size: 26rpx;
  color: #1e40af;
  flex: 1;
}

.file-remove {
  font-size: 24rpx;
  color: #ef4444;
  padding: 8rpx 16rpx;
  border: 1rpx solid #ef4444;
  border-radius: 6rpx;
  background: white;
}

/* 邀请码提示框样式 */
.invite-tip-box {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  background: linear-gradient(135deg, #e0f2fe 0%, #dbeafe 100%);
  border-left: 4rpx solid #3b82f6;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 12rpx;
}

.tip-icon {
  font-size: 36rpx;
  line-height: 1;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1e40af;
}

.tip-text {
  font-size: 24rpx;
  color: #1e3a8a;
  line-height: 1.5;
}

/* 创建班级弹窗特殊样式 */
.create-class-modal .modal-body {
  max-height: 70vh;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.form-input {
  width: 100%;
  padding: 16rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #667eea;
  background: white;
}

/* 详情样式 */
.class-info-header {
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.class-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.student-count {
  font-size: 26rpx;
  color: #666;
}

.detail-section {
  margin-bottom: 32rpx;
}

.detail-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.detail-item {
  display: flex;
  margin-bottom: 12rpx;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  width: 160rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.weak-points-detail {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.weak-point-detail {
  background: #fff2e8;
  color: #fa8c16;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 分享图片 */
.share-image {
  width: 100%;
  border-radius: 8rpx;
}

/* 学生项目样式 */
.student-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.student-item:last-child {
  border-bottom: none;
}

.student-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
  display: block;
}

.student-id {
  font-size: 22rpx;
  color: #999;
}

.status-text {
  font-size: 24rpx;
  color: #52c41a;
}

/* ========== 手动输入学生姓名弹窗样式 ========== */

.manual-input-modal {
  max-width: 90%;
  max-height: 85vh;
  width: 600rpx;
}

.manual-input-modal .modal-body {
  padding: 32rpx;
  max-height: 70vh;
  overflow-y: auto;
}

/* 格式切换器 */
.format-switcher {
  margin-bottom: 24rpx;
}

.format-options {
  display: flex;
  gap: 12rpx;
}

.format-option {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  text-align: center;
  background: #fafafa;
  transition: all 0.3s ease;
}

.format-option.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.format-icon {
  display: block;
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.format-text {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.format-desc {
  display: block;
  font-size: 20rpx;
  opacity: 0.8;
}

.format-option.active .format-desc {
  opacity: 0.9;
}

/* 输入提示 */
.input-tip {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

.tip-text {
  display: block;
  font-size: 26rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.tip-example {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  white-space: pre-line;
  line-height: 1.6;
}

/* 输入区域 */
.input-area {
  margin-bottom: 24rpx;
}

.student-input {
  width: 100%;
  min-height: 300rpx;
  max-height: 400rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background: #fafafa;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.student-input:focus {
  border-color: #667eea;
  background: #ffffff;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

/* 操作按钮 */
.input-actions {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.input-actions .btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 26rpx;
  padding: 20rpx 24rpx;
}

.btn-icon {
  font-size: 28rpx;
}

/* 预览区域 */
.preview-area {
  background: linear-gradient(135deg, #e0f7fa 0%, #e1f5fe 100%);
  border-radius: 12rpx;
  padding: 20rpx;
  border: 2rpx solid #81d4fa;
}

.preview-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #0277bd;
  margin-bottom: 16rpx;
}

.student-preview {
  max-height: 200rpx;
  overflow-y: auto;
  background: #ffffff;
  border-radius: 8rpx;
  padding: 12rpx;
}

.student-preview-item {
  margin-bottom: 8rpx;
  background: #ffffff;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
  overflow: hidden;
}

.student-preview-item:last-child {
  margin-bottom: 0;
}

.student-info {
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx;
  gap: 8rpx;
}

.student-index {
  font-size: 22rpx;
  color: #999;
  min-width: 40rpx;
}

.student-name {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  flex: 1;
}

.student-id {
  font-size: 22rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.student-id.auto {
  color: #667eea;
  background: #e8f2ff;
}

/* 手动输入按钮图标 */
.manual-input-modal .modal-footer {
  padding: 24rpx 32rpx;
  display: flex;
  gap: 16rpx;
}

.manual-input-modal .modal-footer .btn {
  flex: 1;
}