  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.section-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.config-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.config-label {
  font-size: 22rpx;
  color: #666;
  width: 120rpx;
