  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transform: scale(1.05);
}

.count-btn:active {
  transform: scale(0.95);
}

.selected-topics-display {
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.display-title {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 16rpx;
  display: block;
}

.topic-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.topic-simple-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.simple-title {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
}

.simple-controls {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.per-topic-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.per-topic-control {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.per-topic-count {
  font-size: 26rpx;
  color: white;
  font-weight: 600;
  min-width: 60rpx;
  text-align: center;
}

.topic-simple-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.topic-tag {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.topic-tag-text {
  font-size: 26rpx;
  color: white;
