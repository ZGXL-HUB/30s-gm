}

.topic-tag-remove {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  font-size: 24rpx;
  color: white;
  font-weight: bold;
  transition: all 0.2s ease;
}

.topic-tag-remove:active {
  background: rgba(255, 255, 255, 0.4);
  transform: scale(0.9);
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* ===== 自选模式增强样式 ===== */

.custom-mode-actions {
