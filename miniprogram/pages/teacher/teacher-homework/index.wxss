/* 教师端布置语法作业页面样式 */
.teacher-homework {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 20rpx;
}

/* 作业类型选择器 */
.homework-type-selector {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.selector-header {
  margin-bottom: 30rpx;
}

.selector-header .title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.selector-header .subtitle {
  font-size: 24rpx;
  color: #666;
}

/* 已选作业信息 */
.selected-homework {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.homework-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.homework-info {
  flex: 1;
}

.type-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.smart-title {
  display: block;
  font-size: 24rpx;
  color: #667eea;
  margin-bottom: 4rpx;
}

.smart-remark {
  font-size: 20rpx;
  color: #666;
}

/* 已选内容标签 */
.selected-tags {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.tags-label {
  display: block;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 8rpx 12rpx;
  font-size: 20rpx;
  margin: 5rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.tag-item:active {
  transform: scale(0.95);
}

.tag-text {
  color: white;
  margin-right: 8rpx;
  font-weight: bold;
}

.tag-edit {
  color: rgba(255, 255, 255, 0.8);
  margin-right: 8rpx;
}

/* 滑动条模式样式 */
.total-questions-section {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #dee2e6;
}

.total-info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.total-label {
  font-size: 28rpx;
  color: #6c757d;
  margin-right: 8rpx;
}

.total-count {
  font-size: 32rpx;
  font-weight: 600;
  color: #4096ff;
  margin-right: 8rpx;
}

.max-count {
  font-size: 24rpx;
  color: #6c757d;
}

.progress-bar {
  height: 8rpx;
  background-color: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #4096ff 0%, #1677ff 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.slider-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.slider-item {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.slider-label {
  flex: 1;
  font-size: 26rpx;
  color: white;
  font-weight: 500;
  margin-right: 16rpx;
}

.slider-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 2;
}

.slider-count {
  font-size: 24rpx;
  color: white;
  font-weight: 600;
  min-width: 60rpx;
  text-align: center;
}

.number-control-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.control-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  transition: all 0.2s ease;
}

.control-btn:active {
  background: rgba(255, 255, 255, 0.4);
  transform: scale(0.9);
}

.control-btn.disabled {
  opacity: 0.3;
  pointer-events: none;
}

.number-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  gap: 8rpx;
}

.current-number {
  font-size: 28rpx;
  color: white;
  font-weight: 600;
}

.scale-dots {
  display: flex;
  gap: 8rpx;
  justify-content: center;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transition: all 0.2s ease;
  cursor: pointer;
}

.dot.active {
  background: #667eea;
  transform: scale(1.2);
}

.dot:active {
  background: #667eea;
  transform: scale(1.4);
}

/* ===== 专题模式样式 ===== */

.topic-quick-section {
  margin-top: 20rpx;
}

.total-questions-selector {
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  margin-bottom: 16rpx;
}

.selector-title {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 20rpx;
