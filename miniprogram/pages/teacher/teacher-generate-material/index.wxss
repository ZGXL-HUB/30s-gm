/* 统一学案生成流程页面样式 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

/* 头部信息 */
.header {
  background: white;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 变式题选择区域 */
.variant-section {
  background: white;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.variant-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.variant-btn {
  flex: 1;
  min-width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  background: white;
  color: #666;
  font-size: 28rpx;
  transition: all 0.3s;
}

.variant-btn.active {
  border-color: #007aff;
  background: #007aff;
  color: white;
}

.selected-info {
  margin-top: 20rpx;
  padding: 15rpx;
  background: #f0f8ff;
  border-radius: 8rpx;
  color: #007aff;
  font-size: 28rpx;
}

/* 预览区域 */
.preview-section {
  background: white;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e0e0e0;
}

.preview-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.preview-type-selector {
  display: flex;
  gap: 10rpx;
}

.type-btn {
  padding: 10rpx 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 6rpx;
  background: white;
  color: #666;
  font-size: 24rpx;
}

.type-btn.active {
  border-color: #007aff;
  background: #007aff;
  color: white;
}

.preview-content {
  padding: 30rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

.preview-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  white-space: pre-wrap;
}

.preview-actions {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #e0e0e0;
  background: #f8f9fa;
}

.action-btn {
  padding: 15rpx 30rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 6rpx;
  background: white;
  color: #666;
  font-size: 26rpx;
}

/* 生成按钮区域 */
.generate-section {
  background: white;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.generate-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.generate-btn {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
}

.generate-btn.primary {
  background: linear-gradient(135deg, #007aff, #0056cc);
  color: white;
}

.generate-btn.secondary {
  background: linear-gradient(135deg, #34c759, #28a745);
  color: white;
}

.generate-btn:disabled {
  opacity: 0.6;
}

/* 底部操作 */
.footer-actions {
  padding: 20rpx 0;
}

.footer-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  background: white;
  color: #666;
  font-size: 30rpx;
}
