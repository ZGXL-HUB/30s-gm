/* 教师端布置语法作业页面样式（初中版） */
/* 基于高中版样式，完全复用 */

/* 教师端布置语法作业页面样式 */
.teacher-homework {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 20rpx;
}

/* 作业类型选择器 */
.homework-type-selector {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.selector-header {
  margin-bottom: 30rpx;
}

.selector-header .title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.selector-header .subtitle {
  font-size: 24rpx;
  color: #666;
}

/* 已选作业信息 */
.selected-homework {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.homework-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.homework-info {
  flex: 1;
}

.type-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.smart-title {
  display: block;
  font-size: 24rpx;
  color: #667eea;
  margin-bottom: 4rpx;
}

.smart-remark {
  font-size: 20rpx;
  color: #666;
}

/* 已选内容标签 */
.selected-tags {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.tags-label {
  display: block;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 8rpx 12rpx;
  font-size: 20rpx;
  margin: 5rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.tag-item:active {
  transform: scale(0.95);
}

.tag-text {
  color: white;
  margin-right: 8rpx;
  font-weight: bold;
}

.tag-edit {
  color: rgba(255, 255, 255, 0.8);
  margin-right: 8rpx;
}

/* 滑动条模式样式 */
.total-questions-section {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #dee2e6;
}

.total-info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.total-label {
  font-size: 28rpx;
  color: #6c757d;
  margin-right: 8rpx;
}

.total-count {
  font-size: 32rpx;
  font-weight: 600;
  color: #4096ff;
  margin-right: 8rpx;
}

.max-count {
  font-size: 24rpx;
  color: #6c757d;
}


.slider-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.slider-item {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.slider-label {
  flex: 1;
  font-size: 26rpx;
  color: white;
  font-weight: 500;
  margin-right: 16rpx;
}

.slider-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 2;
}

.slider-count {
  font-size: 24rpx;
  color: white;
  font-weight: 600;
  min-width: 60rpx;
  text-align: center;
}

.number-control-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.control-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  transition: all 0.2s ease;
}

.control-btn:active {
  background: rgba(255, 255, 255, 0.4);
  transform: scale(0.9);
}

.control-btn.disabled {
  opacity: 0.3;
  pointer-events: none;
}

.number-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  gap: 8rpx;
}

.current-number {
  font-size: 28rpx;
  color: white;
  font-weight: 600;
}

.scale-dots {
  display: flex;
  gap: 8rpx;
  justify-content: center;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transition: all 0.2s ease;
  cursor: pointer;
}

.dot.active {
  background: #667eea;
  transform: scale(1.2);
}

.dot:active {
  background: #667eea;
  transform: scale(1.4);
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* ===== 自选模式增强样式 ===== */

.custom-mode-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.select-all-btn {
  font-size: 24rpx;
  color: #667eea;
  padding: 8rpx 16rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 8rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.3);
  transition: all 0.2s ease;
}

.select-all-btn:active {
  background: rgba(102, 126, 234, 0.2);
  transform: scale(0.95);
}

.slider-remove {
  color: rgba(255, 255, 255, 0.8);
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 16rpx;
  padding: 8rpx;
}

/* 作业类型选择卡片 */
.type-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 30rpx;
}

.type-card {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.type-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
}

.card-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.card-icon .icon {
  font-size: 28rpx;
}

.card-content {
  flex: 1;
}

.card-content .title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.card-content .subtitle {
  display: block;
  font-size: 22rpx;
  color: #666;
}

/* 统一文件树界面 */
.homework-content {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

/* 已选内容头部 */
.selected-content-header {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.header-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 乱序开关样式 */
.shuffle-toggle {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 8rpx 16rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  border: 1rpx solid #e0e0e0;
  transition: all 0.3s;
}

.shuffle-toggle:active {
  background: #e6f7ff;
  border-color: #1890ff;
}

.shuffle-label {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 手风琴列表 */
.grammar-accordion {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.accordion-section {
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  transition: all 0.3s;
}

.section-header.expanded {
  background: #e6f7ff;
  border-bottom: 1rpx solid #e0e0e0;
}

.section-title {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.topic-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.topic-count {
  font-size: 20rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 已选中的题数显示样式 */
.topic-count[data-selected="true"] {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.section-actions {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.checkbox {
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.checkbox.checked {
  background: #1890ff;
  border-color: #1890ff;
}

.checkbox.checked::after {
  content: '✓';
  color: white;
  font-size: 18rpx;
  font-weight: bold;
}

.expand-icon {
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
}

.section-content {
  background: white;
  padding: 0 20rpx 20rpx;
  min-height: 50rpx;
}

.point-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s;
}

.point-item:last-child {
  border-bottom: none;
}

.point-item.disabled {
  opacity: 0.5;
  background: #f5f5f5;
}

.point-item.selected {
  background: #e6f7ff;
}

.point-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.point-name {
  font-size: 24rpx;
  color: #333;
  min-height: 30rpx;
  line-height: 30rpx;
  display: block;
}

.point-count {
  font-size: 18rpx;
  color: #999;
  background: #f5f5f5;
  padding: 2rpx 6rpx;
  border-radius: 6rpx;
}

.point-checkbox {
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.point-checkbox.checked {
  background: #1890ff;
  border-color: #1890ff;
}

.point-checkbox.checked::after {
  content: '✓';
  color: white;
  font-size: 14rpx;
  font-weight: bold;
}

/* 中考配比已选语法点显示 */
.gaokao-selected-points {
  margin-top: 20rpx;
}

.gaokao-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  border-radius: 16rpx;
  color: white;
}

.gaokao-title {
  font-size: 28rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 5rpx;
}

.gaokao-subtitle {
  font-size: 22rpx;
  opacity: 0.9;
}

.btn-small {
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  border-radius: 12rpx;
}

.btn-white {
  background: rgba(255, 255, 255, 0.4);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  color: white;
}

.regenerate-btn {
  margin-top: 10rpx;
}

.selected-points-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200rpx, 1fr));
  gap: 15rpx;
}

.selected-point-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: white;
  padding: 15rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.selected-point-item .point-name {
  font-size: 24rpx;
  font-weight: bold;
  flex: 1;
  color: white;
}

.selected-point-item .point-remove {
  color: white;
  font-size: 20rpx;
  font-weight: bold;
  padding: 2rpx 6rpx;
  border-radius: 50%;
  background: rgba(255, 77, 79, 0.8);
  width: 24rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
  transition: all 0.3s;
}

.selected-point-item .point-remove:active {
  background: rgba(255, 77, 79, 1);
  transform: scale(0.9);
}

/* 悬浮预览按钮（小球样式） */
.floating-preview-btn {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  z-index: 999;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transform: scale(0.8) translateY(20rpx);
  transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  pointer-events: none;
}

.floating-preview-btn.show {
  opacity: 1;
  transform: scale(1) translateY(0);
  pointer-events: auto;
  animation: floatingBounce 2s ease-in-out infinite;
}

.floating-preview-btn:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

/* 悬浮清空按钮（自选模式） */
.floating-clear-btn {
  position: fixed;
  right: 40rpx;
  bottom: 260rpx;
  z-index: 999;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  box-shadow: 0 12rpx 40rpx rgba(255, 107, 107, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transform: scale(0.8) translateY(20rpx);
  transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  pointer-events: none;
}

.floating-clear-btn.show {
  opacity: 1;
  transform: scale(1) translateY(0);
  pointer-events: auto;
  animation: floatingBounce 2s ease-in-out infinite;
}

.floating-clear-btn:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
}

/* 悬浮重选按钮（中考配比模式） */
.floating-regenerate-btn {
  position: fixed;
  right: 40rpx;
  bottom: 260rpx;
  z-index: 999;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%);
  box-shadow: 0 12rpx 40rpx rgba(255, 152, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transform: scale(0.8) translateY(20rpx);
  transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  pointer-events: none;
}

.floating-regenerate-btn.show {
  opacity: 1;
  transform: scale(1) translateY(0);
  pointer-events: auto;
  animation: floatingBounce 2s ease-in-out infinite;
}

.floating-regenerate-btn:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 24rpx rgba(255, 152, 0, 0.3);
}

.floating-btn-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
}

.floating-btn-icon {
  font-size: 44rpx;
  line-height: 1;
  margin-bottom: 4rpx;
  display: block;
}

.floating-btn-text {
  font-size: 20rpx;
  font-weight: 600;
  line-height: 1;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 悬浮动画 */
@keyframes floatingBounce {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-10rpx) scale(1.02);
  }
}

/* 响应式设计 */
@media (max-width: 350px) {
  .floating-preview-btn {
    right: 30rpx;
    bottom: 100rpx;
    width: 100rpx;
    height: 100rpx;
  }
  
  .floating-clear-btn {
    right: 30rpx;
    bottom: 240rpx;
    width: 100rpx;
    height: 100rpx;
  }
  
  .floating-regenerate-btn {
    right: 30rpx;
    bottom: 240rpx;
    width: 100rpx;
    height: 100rpx;
  }
  
  .floating-btn-icon {
    font-size: 36rpx;
  }
  
  .floating-btn-text {
    font-size: 18rpx;
  }
}

