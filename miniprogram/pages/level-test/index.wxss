/* pages/level-test/index.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 欢迎界面样式 */
.welcome-screen {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.welcome-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
  max-width: 600rpx;
  width: 100%;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.welcome-message {
  font-size: 32rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 60rpx;
  text-align: left;
}

.start-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx 80rpx;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 20rpx rgba(102, 126, 234, 0.3);
}

.exit-btn {
  background: transparent;
  color: #999;
  border: 2rpx solid #e0e0e0;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 28rpx;
  font-weight: normal;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.exit-btn:active {
  background: #f5f5f5;
  transform: scale(0.98);
}

.test-btn {
  background: #ff6b6b;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 28rpx;
  font-weight: normal;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.test-btn:active {
  background: #ff5252;
  transform: scale(0.98);
}

.debug-btn {
  background: #17a2b8;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 28rpx;
  font-weight: normal;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.debug-btn:active {
  background: #138496;
  transform: scale(0.98);
}

.preview-btn {
  background: #28a745;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 28rpx;
  font-weight: normal;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.preview-btn:active {
  background: #218838;
  transform: scale(0.98);
}

/* 测试界面样式 */
.test-screen {
  padding: 20rpx;
}

.progress-bar {
  background: rgba(255, 255, 255, 0.2);
  height: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
}

.progress-fill {
  background: linear-gradient(90deg, #4CAF50, #8BC34A);
  height: 100%;
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.question-card {
  background: white;
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.question-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
}

.question-type {
  font-size: 28rpx;
  color: #666;
  background: #f8f9fa;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.question-content {
  margin-bottom: 40rpx;
}

.question-text {
  font-size: 36rpx;
  color: #333;
  line-height: 1.6;
}

/* 选项样式 */
.options-container {
  margin-bottom: 40rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.option-item:active {
  transform: scale(0.98);
}

.option-item.correct {
  background: #d4edda;
  border-color: #28a745;
}

.option-item.incorrect {
  background: #f8d7da;
  border-color: #dc3545;
}

.option-label {
  background: #667eea;
  color: white;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  margin-right: 30rpx;
}

.option-text {
  font-size: 32rpx;
  color: #333;
  flex: 1;
}

/* 答案反馈样式 */
.answer-feedback {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
}

.feedback-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.feedback-icon.correct {
  color: #28a745;
}

.feedback-icon.incorrect {
  color: #dc3545;
}

.feedback-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.analysis {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  text-align: left;
}

/* 过渡界面样式 */
.transition-screen {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.transition-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
  max-width: 600rpx;
  width: 100%;
}

.transition-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #28a745;
  margin-bottom: 30rpx;
}

.transition-message {
  font-size: 32rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 50rpx;
}

.continue-btn {
  background: linear-gradient(135deg, #28a745, #20c997);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx 80rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 20rpx rgba(40, 167, 69, 0.3);
}

/* 书写题输入样式 */
.answer-input-container {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  gap: 20rpx;
}

.answer-input {
  flex: 1;
  border: 2rpx solid #e9ecef;
  border-radius: 20rpx;
  padding: 25rpx;
  font-size: 32rpx;
  background: #f8f9fa;
}

.submit-btn {
  background: #667eea;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 25rpx 40rpx;
  font-size: 28rpx;
}

.answer-tip {
  margin-top: 15rpx;
  text-align: center;
}

.tip-text {
  font-size: 24rpx;
  color: #ff6b6b;
  background: #fff5f5;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  border: 1rpx solid #ffebee;
  display: inline-block;
}

/* 结果界面样式 */
.result-screen {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

.result-scroll {
  height: 100%;
  width: 100%;
}

.result-content {
  background: white;
  border-radius: 30rpx;
  padding: 50rpx 40rpx 120rpx 40rpx; /* 增加底部内边距 */
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx; /* 增加底部外边距 */
}

.result-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #28a745;
  text-align: center;
  margin-bottom: 20rpx;
}

.result-subtitle {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  margin-bottom: 50rpx;
}

.result-stats {
  margin-bottom: 50rpx;
}

.stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
}

.stat-item.total {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

.stat-item.total .stat-label {
  color: white;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stat-item.total .stat-value {
  color: white;
}

.stat-level {
  font-size: 24rpx;
  color: #667eea;
  background: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.stat-item.total .stat-level {
  background: rgba(255, 255, 255, 0.2);
  color: white;
}

/* 用户等级样式 */
.user-level-section {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  text-align: center;
}

.user-level-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.user-level-message {
  font-size: 26rpx;
  line-height: 1.5;
  opacity: 0.9;
}

.recommendation-section {
  margin-bottom: 50rpx;
}

.recommendation-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.recommendation-content {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx;
}

.recommendation-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
  margin-bottom: 20rpx;
}

.next-steps {
  background: #e8f5e8;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.next-steps-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #155724;
  margin-bottom: 15rpx;
}

.next-steps-list {
  font-size: 24rpx;
  color: #155724;
}

.next-step-item {
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.action-buttons {
  display: flex;
  gap: 15rpx;
  margin-top: 40rpx; /* 增加顶部间距 */
  padding: 0 10rpx; /* 增加左右内边距 */
  flex-wrap: wrap;
}

.retake-btn, .view-result-btn, .complete-btn {
  flex: 1;
  border: none;
  border-radius: 50rpx; /* 更圆润的边角 */
  padding: 25rpx 20rpx; /* 调整内边距 */
  font-size: 28rpx; /* 调整字体大小 */
  font-weight: bold;
  min-height: 70rpx; /* 设置最小高度 */
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.15); /* 调整阴影 */
  transition: all 0.3s ease; /* 添加过渡效果 */
  min-width: 120rpx; /* 设置最小宽度 */
}

.retake-btn {
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.4);
}

.retake-btn:active {
  transform: scale(0.98);
  box-shadow: 0 3rpx 12rpx rgba(255, 107, 107, 0.3);
}

.view-result-btn {
  background: #6c757d;
  color: white;
}

.view-result-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.complete-btn {
  background: linear-gradient(135deg, #28a745, #20c997);
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(40, 167, 69, 0.4); /* 增强主按钮阴影 */
}

.complete-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(40, 167, 69, 0.3);
}

/* 24题完整版测试入口样式 */
.comprehensive-test-section {
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b6b 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
}

.comprehensive-test-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 15rpx;
}

.comprehensive-test-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 25rpx;
  line-height: 1.5;
}

.comprehensive-test-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  font-weight: bold;
  backdrop-filter: blur(10rpx);
}

.comprehensive-test-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

/* 个性化推荐入口样式 */
.recommendation-actions {
  margin: 30rpx 0;
}

.recommendation-actions-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  text-align: center;
}

.recommendation-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recommendation-btn {
  border: none;
  border-radius: 25rpx;
  padding: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.recommendation-btn.primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.recommendation-btn.secondary {
  background: #f8f9fa;
  color: #333;
  border: 2rpx solid #e9ecef;
}

.recommendation-btn:active {
  transform: scale(0.98);
}

/* 具体推荐练习样式 */
.specific-recommendations {
  margin-bottom: 50rpx;
}

.specific-recommendations-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.specific-recommendations-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recommendation-card {
  background: linear-gradient(135deg, #f8f9ff 0%, #e8f2ff 100%);
  border-radius: 15rpx;
  padding: 30rpx;
  border: 2rpx solid #e1e8ff;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.recommendation-card:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #e8f2ff 0%, #d1e7ff 100%);
}

.recommendation-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.recommendation-card-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.recommendation-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.recommendation-card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.recommendation-card-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 15rpx;
}

.recommendation-card-arrow {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
}

/* 预览界面样式 */
.preview-screen {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.preview-content {
  background: white;
  border-radius: 20rpx;
  width: 100%;
  max-width: 800rpx;
  max-height: 90vh;
  overflow: hidden;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.3);
}

.preview-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.preview-title {
  font-size: 36rpx;
  font-weight: bold;
}

.close-btn {
  font-size: 48rpx;
  font-weight: bold;
  cursor: pointer;
  padding: 10rpx;
  line-height: 1;
}

.preview-scroll {
  max-height: calc(90vh - 120rpx);
}

.level-preview-list {
  padding: 20rpx;
}

.level-preview-item {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-left: 8rpx solid #667eea;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.level-preview-header {
  margin-bottom: 25rpx;
}

.level-preview-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.level-preview-subtitle {
  font-size: 26rpx;
  color: #666;
  background: #e9ecef;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.level-preview-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 25rpx;
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
  padding: 0 10rpx;
}

.stat-item.total {
  border-left: 2rpx solid #e0e0e0;
  border-right: 2rpx solid #e0e0e0;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.stat-level {
  display: block;
  font-size: 22rpx;
  color: #667eea;
  font-weight: bold;
}

.level-preview-user-level {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 25rpx;
}

.user-level-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-level-message {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.level-preview-recommendations {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 25rpx;
}

.recommendation-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.recommendation-content {
  font-size: 26rpx;
  color: #667eea;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.suggestion-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.level-preview-actions {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
}

.next-steps-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.next-steps-list {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.next-step-item {
  margin-bottom: 8rpx;
}