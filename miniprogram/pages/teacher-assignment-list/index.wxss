/* 教师端作业管理页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.create-btn {
  background: #007aff;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
}

.tabs {
  display: flex;
  background: white;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tab {
  flex: 1;
  padding: 25rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  background: #fafafa;
  border-right: 2rpx solid #f0f0f0;
}

.tab:last-child {
  border-right: none;
}

.tab.active {
  background: #007aff;
  color: white;
}

.assignment-list {
  margin-bottom: 30rpx;
}

.assignment-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.assignment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.assignment-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.assignment-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.assignment-status.active {
  background: #e6f3ff;
  color: #007aff;
}

.assignment-status.completed {
  background: #e8f5e8;
  color: #4CAF50;
}

.assignment-status.expired {
  background: #ffebee;
  color: #F44336;
}

.assignment-info {
  margin-bottom: 25rpx;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  width: 150rpx;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.assignment-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
}

.action-btn.primary {
  background: #007aff;
  color: white;
}

.action-btn.secondary {
  background: #f0f0f0;
  color: #333;
}

.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 30rpx;
}

.empty-btn {
  background: #007aff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.loading-state {
  text-align: center;
  padding: 80rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.export-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
}

.modal-body {
  padding: 30rpx;
}

.format-options {
  margin-bottom: 30rpx;
}

.format-option {
  display: flex;
  align-items: center;
  padding: 25rpx;
  margin-bottom: 15rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: #fafafa;
  transition: all 0.3s;
}

.format-option.selected {
  border-color: #007aff;
  background: #e6f3ff;
}

.format-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.format-info {
  flex: 1;
}

.format-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.format-desc {
  font-size: 24rpx;
  color: #666;
}

.format-radio {
  font-size: 30rpx;
  color: #007aff;
  font-weight: bold;
}

.assignment-info {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border: 2rpx solid #e0e0e0;
}

.info-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.info-text {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 5rpx;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.btn {
  flex: 1;
  padding: 25rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  text-align: center;
  border: none;
}

.btn-primary {
  background: #007aff;
  color: white;
}

.btn-secondary {
  background: #f0f0f0;
  color: #333;
}
