/* 学生端作业列表页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.tabs {
  display: flex;
  background: white;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tab {
  flex: 1;
  padding: 25rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  background: #fafafa;
  border-right: 2rpx solid #f0f0f0;
}

.tab:last-child {
  border-right: none;
}

.tab.active {
  background: #4CAF50;
  color: white;
}

.assignment-list {
  margin-bottom: 30rpx;
}

.assignment-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.assignment-item.expired {
  opacity: 0.6;
  background: #f8f8f8;
}

.assignment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.assignment-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.assignment-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.assignment-status.pending {
  background: #fff3e0;
  color: #FF9800;
}

.assignment-status.completed {
  background: #e8f5e8;
  color: #4CAF50;
}

.assignment-status.expired {
  background: #ffebee;
  color: #F44336;
}

.assignment-info {
  margin-bottom: 25rpx;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  width: 150rpx;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.info-value.remaining {
  color: #FF9800;
  font-weight: bold;
}

.assignment-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
}

.action-btn.primary {
  background: #4CAF50;
  color: white;
}

.action-btn.secondary {
  background: #f0f0f0;
  color: #333;
}

.action-btn.disabled {
  background: #e0e0e0;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.loading-state {
  text-align: center;
  padding: 80rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}
