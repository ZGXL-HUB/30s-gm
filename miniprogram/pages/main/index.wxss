/* 极简主界面样式 */
.main-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.function-cards {
  width: 100%;
  max-width: 600rpx;
}

.card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.teacher-card {
  background: linear-gradient(135deg, #007aff 0%, #0056cc 100%);
  color: white;
}

.student-card {
  background: linear-gradient(135deg, #4CAF50 0%, #2e7d32 100%);
  color: white;
}

.card-icon {
  font-size: 60rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  flex: 1;
}

.card-desc {
  font-size: 26rpx;
  opacity: 0.9;
  flex: 1;
}

.card-arrow {
  font-size: 32rpx;
  font-weight: bold;
  opacity: 0.7;
  margin-left: 20rpx;
}

.footer {
  margin-top: auto;
  text-align: center;
  padding-top: 40rpx;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}
