.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #ff9800 0%, #f5f5f5 25%);
  padding: 40rpx 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 50rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #666;
}

.lesson-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.lesson-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 36rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.lesson-card:active {
  transform: scale(0.99);
  opacity: 0.95;
}

.card-left {
  flex: 1;
}

.lesson-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.card-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 已完成：运动 app 风格对勾 */
.completed-badge {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #4caf50 0%, #2e7d32 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.4);
}

.check-icon {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
}

.card-arrow {
  font-size: 30rpx;
  color: #999;
  font-weight: bold;
}
