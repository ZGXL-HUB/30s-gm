.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.content {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 40rpx;
  text-align: center;
  line-height: 1.5;
}

.section {
  margin-bottom: 40rpx;
  border-left: 4rpx solid #1890ff;
  padding-left: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.section-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.section-subtitle {
  font-size: 28rpx;
  font-weight: bold;
  color: #1890ff;
  margin: 15rpx 0 10rpx 0;
}

.word-item {
  font-size: 26rpx;
  color: #555;
  margin-bottom: 8rpx;
  padding-left: 20rpx;
  line-height: 1.4;
}

.note-item {
  font-size: 26rpx;
  color: #555;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.table-container {
  margin-top: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #e0e0e0;
}

.table-row:last-child {
  border-bottom: none;
}

.table-row.header {
  background-color: #1890ff;
}

.table-row.header .table-cell {
  color: white;
  font-weight: bold;
}

.table-cell {
  flex: 1;
  padding: 20rpx 15rpx;
  font-size: 24rpx;
  text-align: center;
  border-right: 1rpx solid #e0e0e0;
  line-height: 1.3;
}

.table-cell:last-child {
  border-right: none;
}

.table-row:nth-child(even):not(.header) {
  background-color: #f9f9f9;
} 