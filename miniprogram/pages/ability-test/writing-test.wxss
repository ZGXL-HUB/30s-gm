/* 书写测试页面样式 */
.container {
  padding: 24rpx;
  padding-bottom: 120rpx; /* 为底部操作栏留出空间 */
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 顶部进度条 */
.progress-header {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.progress-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  text-align: center;
}

.progress-bar {
  width: 100%;
  height: 14rpx;
  background: #f0f0f0;
  border-radius: 7rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FF9800, #FFC107);
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

/* 进度按钮区域 */
.progress-button-section {
  margin-bottom: 20rpx;
}

.progress-button {
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 0;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.progress-button::after {
  border: none;
}

.progress-button:active {
  transform: scale(0.98);
}

.progress-button-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
}

.progress-button-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.progress-button-subtitle {
  font-size: 22rpx;
  color: #666;
  margin-top: 2rpx;
}

.progress-button-arrow {
  font-size: 28rpx;
  color: #999;
  font-weight: bold;
}

/* 练习区域 */
.exercise-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.exercise-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.current-table {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.exercise-number {
  font-size: 22rpx;
  color: #666;
  background: #f0f0f0;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
}

.exercise-content {
  margin-bottom: 24rpx;
}

.exercise-question {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 24rpx;
  text-align: center;
}

/* 填空题输入 */
.fill-blank {
  margin-top: 20rpx;
}

.answer-input {
  width: 100%;
  height: 72rpx;
  background: #f8f9fa;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #333;
  text-align: center;
}

.answer-input:focus {
  border-color: #FF9800;
  background: #fff;
}

/* 答案反馈 */
.answer-feedback {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.feedback-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.feedback-header.correct {
  color: #4CAF50;
}

.feedback-header.incorrect {
  color: #f44336;
}

.feedback-icon {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.feedback-text {
  font-size: 28rpx;
  font-weight: 600;
}

.correct-answer {
  background: #fff3cd;
  border: 1rpx solid #ffeaa7;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
}

.correct-answer text {
  font-size: 24rpx;
  color: #856404;
}

.exercise-analysis {
  background: #e3f2fd;
  border: 1rpx solid #bbdefb;
  border-radius: 12rpx;
  padding: 16rpx;
}

.exercise-analysis text {
  font-size: 24rpx;
  color: #1976d2;
  line-height: 1.5;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #FF9800, #FFC107);
  color: white;
}

.action-btn.primary:active {
  transform: scale(0.98);
}

.action-btn.secondary {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.action-btn.secondary:active {
  transform: scale(0.98);
}

/* 加载状态 */
.loading-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 80rpx 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 底部操作栏 */
.bottom-actions {
  display: flex;
  gap: 12rpx;
  position: fixed;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  z-index: 100;
}

.bottom-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.bottom-btn.primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.bottom-btn.primary:active {
  transform: scale(0.98);
}

.bottom-btn.secondary {
  background: rgba(255, 255, 255, 0.9);
  color: #666;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.bottom-btn.secondary:active {
  transform: scale(0.98);
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.modal-content {
  background: white;
  border-radius: 24rpx;
  width: 100%;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f5f5f5;
}

.modal-close:active {
  background: #e0e0e0;
}

.modal-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.progress-summary {
  background: linear-gradient(135deg, #FF9800, #FFC107);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  color: white;
  text-align: center;
}

.summary-text {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.summary-percentage {
  font-size: 36rpx;
  font-weight: bold;
}

.table-grid-modal {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.table-item-modal {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.table-item-modal.tested {
  border-color: #FF9800;
  background: rgba(255, 152, 0, 0.1);
}

.table-name-modal {
  font-size: 20rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.table-status-modal {
  font-size: 18rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.table-bar-modal {
  width: 100%;
  height: 8rpx;
  background: #e0e0e0;
  border-radius: 4rpx;
  overflow: hidden;
}

.table-fill-modal {
  height: 100%;
  background: linear-gradient(90deg, #FF9800, #FFC107);
  transition: width 0.3s ease;
}
