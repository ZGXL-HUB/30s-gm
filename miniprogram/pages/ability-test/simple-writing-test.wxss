/* 简易版书写能力测试页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 欢迎界面 */
.welcome-screen {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.welcome-content {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  max-width: 600rpx;
  width: 100%;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.welcome-message {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.test-info {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.info-item {
  font-size: 26rpx;
  color: #555;
  margin-bottom: 15rpx;
  text-align: left;
}

.info-item:last-child {
  margin-bottom: 0;
}

.start-btn {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

/* 测试界面 */
.test-screen {
  background: white;
  border-radius: 20rpx;
  margin: 20rpx 0;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.progress-header {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  padding: 30rpx;
  text-align: center;
}

.progress-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.progress-bar {
  background: rgba(255, 255, 255, 0.3);
  height: 8rpx;
  border-radius: 4rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
}

.progress-fill {
  background: white;
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  opacity: 0.9;
}

.question-card {
  padding: 40rpx;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.question-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
}

.question-type {
  font-size: 24rpx;
  color: #999;
  background: #f8f9fa;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.question-content {
  margin-bottom: 40rpx;
}

.question-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
}

.answer-input-container {
  margin-bottom: 40rpx;
}

.answer-input {
  width: 100%;
  padding: 25rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 15rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.answer-input:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.answer-input:disabled {
  background: #e9ecef;
  color: #6c757d;
}

.answer-feedback {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.feedback-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.feedback-header.correct {
  color: #28a745;
}

.feedback-header.incorrect {
  color: #dc3545;
}

.feedback-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.feedback-text {
  font-size: 28rpx;
  font-weight: bold;
}

.correct-answer {
  font-size: 26rpx;
  color: #28a745;
  margin-bottom: 15rpx;
}

.question-analysis {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.action-buttons {
  text-align: center;
}

.action-btn {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.action-btn.secondary {
  background: #6c757d;
  box-shadow: 0 8rpx 20rpx rgba(108, 117, 125, 0.3);
}

.action-btn.disabled {
  background: #e9ecef;
  color: #6c757d;
  box-shadow: none;
}

/* 结果界面 */
.result-screen {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.result-content {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  max-width: 600rpx;
  width: 100%;
}

.result-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.score-display {
  margin-bottom: 40rpx;
}

.score-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(45deg, #667eea, #764ba2);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
  color: white;
}

.score-number {
  font-size: 60rpx;
  font-weight: bold;
}

.score-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.score-description {
  font-size: 26rpx;
  color: #666;
}

.user-level {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.level-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.level-message {
  font-size: 24rpx;
  color: #666;
}

.weak-points {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #fff3cd;
  border-radius: 15rpx;
  text-align: left;
}

.weak-points-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #856404;
  margin-bottom: 15rpx;
}

.weak-points-list {
  font-size: 24rpx;
  color: #856404;
}

.weak-point-item {
  margin-bottom: 8rpx;
}

.recommendation {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #d1ecf1;
  border-radius: 15rpx;
  text-align: left;
}

.recommendation-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #0c5460;
  margin-bottom: 15rpx;
}

.recommendation-text {
  font-size: 24rpx;
  color: #0c5460;
  line-height: 1.5;
}

.next-steps {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #d4edda;
  border-radius: 15rpx;
  text-align: left;
}

.next-steps-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #155724;
  margin-bottom: 15rpx;
}

.next-steps-list {
  font-size: 24rpx;
  color: #155724;
}

.next-step-item {
  margin-bottom: 8rpx;
}

.navigation-buttons {
  margin-bottom: 30rpx;
}

.nav-btn {
  width: 100%;
  margin-bottom: 15rpx;
  border-radius: 50rpx;
  padding: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.nav-btn.primary {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.bottom-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.bottom-btn {
  flex: 1;
  border-radius: 50rpx;
  padding: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.bottom-btn.primary {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.bottom-btn.secondary {
  background: #6c757d;
  color: white;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(108, 117, 125, 0.3);
}

/* 加载状态 */
.loading-section {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: white;
}

/* 反馈入口样式 */
.feedback-section {
  margin: 40rpx 0;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  text-align: center;
}

.feedback-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.feedback-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.feedback-btn {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.feedback-btn:active {
  transform: scale(0.98);
}