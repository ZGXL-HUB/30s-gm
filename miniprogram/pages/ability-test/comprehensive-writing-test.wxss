/* 全面版书写能力测试页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 欢迎界面 */
.welcome-screen {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.welcome-content {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  max-width: 600rpx;
  width: 100%;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.welcome-message {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.test-info {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.info-item {
  font-size: 26rpx;
  color: #555;
  margin-bottom: 15rpx;
  text-align: left;
}

.info-item:last-child {
  margin-bottom: 0;
}

.start-btn {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

/* 测试界面 */
.test-screen {
  background: white;
  border-radius: 20rpx;
  margin: 20rpx 0;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.progress-header {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  padding: 30rpx;
  text-align: center;
}

.progress-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.progress-bar {
  background: rgba(255, 255, 255, 0.3);
  height: 8rpx;
  border-radius: 4rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
}

.progress-fill {
  background: white;
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  opacity: 0.9;
}

.question-card {
  padding: 40rpx;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.question-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
}

.question-type {
  font-size: 24rpx;
  color: #999;
  background: #f8f9fa;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.question-content {
  margin-bottom: 40rpx;
}

.question-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
}

.options-container {
  margin-bottom: 40rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  margin-bottom: 15rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.option-item:active {
  transform: scale(0.98);
}

.option-item.correct {
  background: #d4edda;
  border-color: #28a745;
  color: #155724;
}

.option-item.incorrect {
  background: #f8d7da;
  border-color: #dc3545;
  color: #721c24;
}

.option-label {
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
  min-width: 60rpx;
}

.option-text {
  font-size: 26rpx;
  flex: 1;
}

.answer-feedback {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.feedback-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.feedback-header.correct {
  color: #28a745;
}

.feedback-header.incorrect {
  color: #dc3545;
}

.feedback-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.feedback-text {
  font-size: 28rpx;
  font-weight: bold;
}

.correct-answer {
  font-size: 26rpx;
  color: #28a745;
  margin-bottom: 15rpx;
}

.question-analysis {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.action-buttons {
  text-align: center;
}

.button-row {
  display: flex;
  gap: 20rpx;
  justify-content: center;
  align-items: center;
}

.action-btn {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.action-btn.secondary {
  background: #6c757d;
  box-shadow: 0 8rpx 20rpx rgba(108, 117, 125, 0.3);
}

.action-btn.disabled {
  background: #e9ecef;
  color: #6c757d;
  box-shadow: none;
}

/* 结果界面 */
.result-screen {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

.result-scroll {
  height: 100%;
  width: 100%;
  padding-bottom: 40rpx;
}

.result-content {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx 120rpx 40rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  max-width: 600rpx;
  width: 100%;
  margin: 0 auto;
  min-height: calc(100vh - 40rpx);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
}

.result-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.score-display {
  margin-bottom: 40rpx;
}

.score-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(45deg, #667eea, #764ba2);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
  color: white;
}

.score-number {
  font-size: 60rpx;
  font-weight: bold;
}

.score-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.score-description {
  font-size: 26rpx;
  color: #666;
}

.empty-answer-info {
  margin-top: 15rpx;
  text-align: center;
}

.empty-count {
  font-size: 24rpx;
  color: #ff6b6b;
  background: #ffe0e0;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.result-message {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.bottom-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  padding: 0 20rpx;
  position: sticky;
  bottom: 0;
  background: white;
  z-index: 10;
}

.bottom-btn {
  flex: 1;
  border-radius: 50rpx;
  padding: 30rpx 25rpx;
  font-size: 30rpx;
  font-weight: bold;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.bottom-btn.primary {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border: none;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  position: relative;
  overflow: hidden;
}

.bottom-btn.primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.bottom-btn.secondary {
  background: #6c757d;
  color: white;
  border: none;
  box-shadow: 0 8rpx 25rpx rgba(108, 117, 125, 0.4);
}

.bottom-btn.secondary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(108, 117, 125, 0.3);
}

/* 加载状态 */
.loading-section {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: white;
}

/* 反馈入口样式 */
.feedback-section {
  margin: 40rpx 0 60rpx 0;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  text-align: center;
}

.feedback-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.feedback-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.feedback-btn {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.feedback-btn:active {
  transform: scale(0.98);
}

/* 响应式设计 */
@media (max-width: 350px) {
  .welcome-content,
  .result-content {
    padding: 40rpx 30rpx;
  }
  
  .welcome-title,
  .result-title {
    font-size: 40rpx;
  }
  
  .question-card {
    padding: 30rpx;
  }
  
  .option-item {
    padding: 20rpx;
  }
  
  .action-btn {
    padding: 20rpx 50rpx;
    font-size: 26rpx;
  }
}

@media (min-width: 400px) {
  .welcome-content,
  .result-content {
    max-width: 650rpx;
  }
  
  .test-screen {
    max-width: 700rpx;
    margin: 20rpx auto;
  }
  
  .question-card {
    padding: 50rpx;
  }
  
  .options-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
  }
  
  .option-item {
    margin-bottom: 0;
  }
}

@media (min-width: 500px) {
  .container {
    max-width: 800rpx;
    margin: 0 auto;
  }
  
  .options-container {
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }
}

