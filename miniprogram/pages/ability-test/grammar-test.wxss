/* 重测我的语法水平页面样式 */
.container {
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 欢迎界面 */
.welcome-screen {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 80vh;
  text-align: center;
}

.welcome-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  max-width: 600rpx;
  width: 100%;
}

.welcome-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 24rpx;
}

.welcome-message {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

.start-btn {
  background: linear-gradient(135deg, #4CAF50, #8BC34A);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.start-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

/* 测试界面 */
.test-screen {
  padding-top: 24rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #8BC34A);
  transition: width 0.3s ease;
}

.question-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.question-number {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.question-type {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.question-content {
  margin-bottom: 32rpx;
}

.question-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.options-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.option-item:active {
  transform: scale(0.98);
}

.option-item.correct {
  background: #d4edda;
  border-color: #c3e6cb;
}

.option-item.incorrect {
  background: #f8d7da;
  border-color: #f5c6cb;
}

.option-label {
  width: 48rpx;
  height: 48rpx;
  background: #6c757d;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 20rpx;
}

.option-item.correct .option-label {
  background: #28a745;
}

.option-item.incorrect .option-label {
  background: #dc3545;
}

.option-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.answer-feedback {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 24rpx;
  border-left: 6rpx solid #6c757d;
}

.answer-feedback.correct {
  border-left-color: #28a745;
}

.answer-feedback.incorrect {
  border-left-color: #dc3545;
}

.feedback-icon {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.feedback-icon.correct {
  color: #28a745;
}

.feedback-icon.incorrect {
  color: #dc3545;
}

.feedback-text {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.analysis {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  padding-top: 16rpx;
  border-top: 1rpx solid #e9ecef;
}

/* 结果界面 */
.result-screen {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 80vh;
  text-align: center;
}

/* 下一步推荐区域 */
.next-steps-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 24rpx;
  margin: 24rpx 0;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 600rpx;
}

.next-steps-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  text-align: left;
}

.next-steps-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.next-step-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
}

.next-step-item:active {
  transform: scale(0.98);
  background: #e9ecef;
  border-color: #667eea;
}

.step-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  width: 48rpx;
  text-align: center;
}

.step-content {
  flex: 1;
  text-align: left;
}

.step-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.step-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

.step-arrow {
  font-size: 24rpx;
  color: #999;
  font-weight: bold;
  margin-left: 12rpx;
}

.result-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  max-width: 600rpx;
  width: 100%;
}

.result-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 32rpx;
}

.result-summary {
  margin-bottom: 32rpx;
}

.score-section {
  margin-bottom: 24rpx;
}

.score-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.score-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #4CAF50;
  margin-bottom: 8rpx;
}

.score-rate {
  font-size: 24rpx;
  color: #666;
}

.level-section {
  margin-bottom: 24rpx;
}

.level-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.level-value {
  font-size: 32rpx;
  font-weight: 600;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.level-level1 {
  background: #f8d7da;
  color: #721c24;
}

.level-level2 {
  background: #fff3cd;
  color: #856404;
}

.level-level3 {
  background: #d1ecf1;
  color: #0c5460;
}

.level-level4 {
  background: #d4edda;
  color: #155724;
}

.level-level5 {
  background: #cce5ff;
  color: #004085;
}

.recommendation-section {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  text-align: left;
}

.recommendation-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.recommendation-content {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.suggestion-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.result-tip {
  background: #e3f2fd;
  border: 1rpx solid #bbdefb;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 32rpx;
  font-size: 24rpx;
  color: #1976d2;
  line-height: 1.5;
}

/* 底部三个按钮 */
.result-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  color: white;
}

.result-btn.analysis-btn {
  background: linear-gradient(135deg, #2196F3, #21CBF3);
}

.result-btn.report-btn {
  background: linear-gradient(135deg, #FF9800, #FFC107);
}

.result-btn.save-btn {
  background: linear-gradient(135deg, #9C27B0, #E91E63);
}

.result-btn:active {
  transform: scale(0.98);
}

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-size: 26rpx;
}

/* 解析界面 */
.analysis-screen {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
}

.analysis-content {
  background: white;
  border-radius: 24rpx;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
}

.analysis-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.analysis-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #666;
  cursor: pointer;
  padding: 8rpx;
}

.analysis-list {
  padding: 24rpx;
}

.analysis-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.question-header-analysis {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.question-number-analysis {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.question-tag {
  font-size: 22rpx;
  color: #666;
  background: #e9ecef;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.question-text-analysis {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.answer-details {
  margin-bottom: 20rpx;
}

.answer-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.answer-label {
  font-size: 24rpx;
  color: #666;
  width: 120rpx;
  flex-shrink: 0;
}

.answer-correct {
  font-size: 24rpx;
  color: #28a745;
  font-weight: 600;
}

.answer-user {
  font-size: 24rpx;
  font-weight: 600;
}

.answer-user.correct {
  color: #28a745;
}

.answer-user.incorrect {
  color: #dc3545;
}

.answer-result {
  font-size: 24rpx;
  font-weight: 600;
}

.answer-result.correct {
  color: #28a745;
}

.answer-result.incorrect {
  color: #dc3545;
}

.analysis-content-text {
  margin-bottom: 16rpx;
}

.analysis-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: block;
}

.analysis-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
}

.question-source {
  font-size: 22rpx;
  color: #999;
  text-align: right;
  font-style: italic;
}

/* 报告界面 */
.report-screen {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
}

.report-content {
  background: white;
  border-radius: 24rpx;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
}

.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.report-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.report-summary {
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.report-score {
  text-align: center;
  margin-bottom: 24rpx;
}

.report-score-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.report-score-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #4CAF50;
  margin-bottom: 8rpx;
}

.report-score-rate {
  font-size: 24rpx;
  color: #666;
}

.report-level {
  text-align: center;
}

.report-level-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.report-level-value {
  font-size: 32rpx;
  font-weight: 600;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.report-recommendation {
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.report-recommendation-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.report-recommendation-content {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.report-suggestion-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.report-actions {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  justify-content: center;
}

.report-action-btn {
  flex: 1;
  max-width: 200rpx;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.report-action-btn:first-child {
  background: #6c757d;
  color: white;
}

.report-action-btn:last-child {
  background: linear-gradient(135deg, #4CAF50, #8BC34A);
  color: white;
}

.report-action-btn:active {
  transform: scale(0.98);
}

/* 调试信息样式 */
.debug-info {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  border: 2rpx solid #e9ecef;
}

.debug-text {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  word-break: break-all;
}

/* 测试按钮样式 */
.test-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
}

.test-option-btn {
  flex: 1;
  background: #667eea;
  color: white;
  border: none;
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.test-option-btn:active {
  background: #5a6fd8;
  transform: scale(0.95);
}

/* 反馈入口样式 */
.feedback-section {
  margin: 40rpx 0;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  text-align: center;
}

.feedback-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.feedback-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.feedback-btn {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.feedback-btn:active {
  transform: scale(0.98);
}