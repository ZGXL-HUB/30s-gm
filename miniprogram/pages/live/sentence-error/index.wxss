.container { width: 100%; min-height: 100vh; background: #f6f6f6; padding: 30rpx; box-sizing: border-box; overflow-x: hidden; }
.loading { text-align: center; padding: 80rpx 0; color: #666; }

.section-title { font-size: 36rpx; font-weight: bold; color: #333; margin-bottom: 24rpx; text-align: center; word-wrap: break-word; overflow-wrap: break-word; }
.action-row { display: flex; gap: 20rpx; margin-bottom: 24rpx; }
.hint-btn { flex: 1; background: #e8eaf6; color: #5c6bc0; }
.skip-btn { flex: 1; background: #fff; color: #666; border: 2rpx solid #e0e0e0; }

.result-page {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
}
.result-title { font-size: 44rpx; font-weight: bold; color: #333; margin-bottom: 16rpx; }
.result-rate { font-size: 52rpx; color: #667eea; margin-bottom: 24rpx; }
.encourage { font-size: 36rpx; color: #666; margin-bottom: 30rpx; }
.back-link { text-align: center; color: #999; font-size: 34rpx; margin-top: 20rpx; }

.content { width: 100%; background: #fff; border-radius: 20rpx; padding: 30rpx; box-sizing: border-box; overflow-x: hidden; }
.progress { font-size: 34rpx; color: #666; margin-bottom: 24rpx; }
.sentence-box { width: 100%; margin-bottom: 30rpx; padding: 24rpx; background: #f9f9f9; border-radius: 12rpx; max-width: 100%; box-sizing: border-box; overflow-wrap: break-word; overflow-x: hidden; }
.sentence-line { font-size: 39rpx; line-height: 2; color: #333; word-wrap: break-word; overflow-wrap: break-word; word-break: break-word; max-width: 100%; }
.word { display: inline; margin-right: 8rpx; padding: 8rpx 12rpx; border-radius: 8rpx; font-size: 39rpx; }
.word:active { background: #e8e8e8; }
.word-correct { background: #c8e6c9; color: #2e7d32; }
.word-wrong { background: #ffcdd2; color: #c62828; }
.feedback-box { margin-top: 24rpx; padding: 24rpx; background: #f5f5f5; border-radius: 12rpx; }
.feedback-msg { font-size: 36rpx; display: block; margin-bottom: 20rpx; }
.feedback-msg.correct { color: #2e7d32; }
.feedback-msg.wrong { color: #c62828; }
.next-row { margin-top: 24rpx; }

.btn { padding: 28rpx; border-radius: 12rpx; font-size: 39rpx; border: none; }
.btn.primary { background: linear-gradient(135deg, #667eea, #764ba2); color: #fff; width: 100%; }
.btn.outline { background: #fff; color: #667eea; border: 2rpx solid #667eea; }

.modal-mask {
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
.modal-box { width: 600rpx; background: #fff; border-radius: 20rpx; padding: 50rpx 40rpx; }
.modal-title { font-size: 42rpx; text-align: center; margin-bottom: 24rpx; color: #333; }
.modal-body { font-size: 36rpx; color: #666; margin-bottom: 32rpx; line-height: 1.5; }
.modal-actions { display: flex; gap: 24rpx; }
.modal-actions .btn { flex: 1; }
