.container { min-height: 100vh; background: #f6f6f6; padding: 30rpx; }
.loading { text-align: center; padding: 80rpx 0; color: #666; }

.section-title { font-size: 39rpx; font-weight: bold; color: #333; margin-bottom: 24rpx; text-align: center; }
.action-row { display: flex; gap: 20rpx; margin-bottom: 24rpx; }
.hint-btn { flex: 1; background: #e8eaf6; color: #5c6bc0; }
.skip-btn { flex: 1; background: #fff; color: #666; border: 2rpx solid #e0e0e0; }

.result-page {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
}
.result-title { font-size: 44rpx; font-weight: bold; color: #333; margin-bottom: 16rpx; }
.result-rate { font-size: 52rpx; color: #667eea; margin-bottom: 24rpx; }
.encourage { font-size: 36rpx; color: #666; margin-bottom: 30rpx; }
.back-link { text-align: center; color: #999; font-size: 34rpx; margin-top: 20rpx; }

.content { background: #fff; border-radius: 20rpx; padding: 30rpx; }
.q-text { font-size: 36rpx; line-height: 1.7; color: #333; margin-bottom: 24rpx; padding: 20rpx; background: #f9f9f9; border-radius: 12rpx; }
.blanks { margin-bottom: 28rpx; }
.blank-row { display: flex; align-items: center; margin-bottom: 16rpx; }
.blank-label { font-size: 34rpx; color: #666; width: 80rpx; }
.blank-input { flex: 1; padding: 20rpx; border: 2rpx solid #e0e0e0; border-radius: 8rpx; font-size: 36rpx; }
.check-mark { color: #4caf50; margin-left: 12rpx; }

.btn { padding: 28rpx; border-radius: 12rpx; font-size: 39rpx; border: none; }
.btn.primary { background: linear-gradient(135deg, #667eea, #764ba2); color: #fff; width: 100%; }
.btn.outline { background: #fff; color: #667eea; border: 2rpx solid #667eea; }

.modal-mask {
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
.modal-box { width: 600rpx; background: #fff; border-radius: 20rpx; padding: 50rpx 40rpx; }
.modal-title { font-size: 42rpx; text-align: center; margin-bottom: 24rpx; color: #333; }
.modal-body { font-size: 36rpx; color: #666; margin-bottom: 32rpx; line-height: 1.5; }
.modal-actions { display: flex; gap: 24rpx; }
.modal-actions .btn { flex: 1; }
