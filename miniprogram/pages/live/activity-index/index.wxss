.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #667eea 0%, #f6f6f6 30%);
  padding: 40rpx;
}
.loading, .error {
  text-align: center;
  padding: 80rpx 0;
  color: #666;
  font-size: 30rpx;
}
.error { color: #e74c3c; }
.content { padding-top: 20rpx; }
.completed-view .header { margin-bottom: 16rpx; }
.badge {
  display: inline-block;
  margin-top: 16rpx;
  padding: 10rpx 24rpx;
  background: rgba(76, 175, 80, 0.2);
  color: #2e7d32;
  font-size: 26rpx;
  border-radius: 30rpx;
}
.subtitle {
  text-align: center;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 30rpx;
}
.btn.restart-from-first {
  margin-bottom: 24rpx;
  background: #667eea;
  color: #fff;
  border: none;
  font-size: 28rpx;
}
.header {
  text-align: center;
  margin-bottom: 50rpx;
}
.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}
.lesson {
  display: block;
  font-size: 30rpx;
  color: #667eea;
  font-weight: 500;
}
.segments {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}
.segment-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 28rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.segment-item:last-child { border-bottom: none; }
.segment-item:active { background: #f8f8f8; }
.segment-name { font-size: 30rpx; color: #333; }
.arrow { font-size: 28rpx; color: #999; }
.btn.back-list {
  margin-top: 50rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
}
