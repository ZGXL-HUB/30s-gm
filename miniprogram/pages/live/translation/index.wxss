.container { min-height: 100vh; background: #f6f6f6; padding: 30rpx; }
.loading { text-align: center; padding: 80rpx 0; color: #666; font-size: 30rpx; }

.done-page {
  background: #fff;
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
  text-align: center;
}
.done-title { font-size: 36rpx; font-weight: bold; color: #333; margin-bottom: 16rpx; }
.done-sub { font-size: 28rpx; color: #666; margin-bottom: 60rpx; }
.done-page .btn { margin: 24rpx 0; }

.content { background: #fff; border-radius: 20rpx; padding: 40rpx; }
.question-box { margin-bottom: 30rpx; }
.zh-label { font-size: 26rpx; color: #666; margin-bottom: 16rpx; }
.zh-text {
  font-size: 34rpx;
  color: #333;
  line-height: 1.6;
  padding: 28rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  margin-bottom: 28rpx;
}
.input-en {
  width: 100%;
  min-height: 160rpx;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  margin-bottom: 28rpx;
}
.feedback { margin-top: 24rpx; }
.feedback-msg { font-size: 30rpx; font-weight: 500; margin-bottom: 12rpx; }
.feedback-msg.correct { color: #4caf50; }
.feedback-msg.wrong { color: #f44336; }
.correct-en { font-size: 28rpx; color: #333; padding: 16rpx; background: #f5f5f5; border-radius: 8rpx; margin-bottom: 16rpx; }
.hint-box { margin-bottom: 24rpx; padding: 16rpx; background: #fff8e1; border-radius: 8rpx; border-left: 4rpx solid #ff9800; }
.hint-title { font-size: 26rpx; color: #e65100; font-weight: 500; display: block; margin-bottom: 8rpx; }
.hint-item { display: block; font-size: 24rpx; color: #666; margin-bottom: 4rpx; }
.actions { display: flex; gap: 20rpx; flex-wrap: wrap; }
.actions .btn { flex: 1; min-width: 200rpx; }
.back-link { text-align: center; color: #999; font-size: 26rpx; margin-top: 30rpx; }

.btn {
  width: 100%;
  padding: 28rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  border: none;
}
.btn.primary { background: linear-gradient(135deg, #667eea, #764ba2); color: #fff; }
.btn.secondary { background: #f5f5f5; color: #666; }
.btn.outline { background: #fff; color: #667eea; border: 2rpx solid #667eea; }
.btn.share { background: #07c160; color: #fff; }
