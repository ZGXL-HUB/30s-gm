<view class="container">
  <view class="header">
    <text class="title">课堂配套练习</text>
    <text class="subtitle">点击课程进入当节课流程，可重复练习</text>
  </view>
  <view class="lesson-list">
    <view
      wx:for="{{lessons}}"
      wx:key="id"
      class="lesson-card"
      data-id="{{item.id}}"
      bindtap="goToLesson"
    >
      <view class="card-left">
        <view class="lesson-name">{{item.name}}</view>
        <view wx:if="{{item.stars}}" class="stars-badge">{{item.stars === 1 ? '★' : ''}}{{item.stars === 2 ? '★★' : ''}}{{item.stars === 3 ? '★★★' : ''}}</view>
      </view>
      <view class="card-right">
        <view wx:if="{{item.completed}}" class="completed-badge">
          <text class="check-icon">✓</text>
        </view>
        <view class="card-arrow">→</view>
      </view>
    </view>
  </view>
</view>
