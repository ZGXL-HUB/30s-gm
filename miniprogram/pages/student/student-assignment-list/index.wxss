/* 极简学生端样式 */
.container {
  padding: 40rpx 30rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.join-class-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 30rpx;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.join-class-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

.assignment-list {
  margin-bottom: 30rpx;
}

.assignment-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.assignment-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.12);
}

.assignment-card.expired {
  opacity: 0.6;
  background: #f8f8f8;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.assignment-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.assignment-status {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.assignment-status.pending {
  background: #fff3e0;
  color: #FF9800;
}

.assignment-status.completed {
  background: #e8f5e8;
  color: #4CAF50;
}

.assignment-status.expired {
  background: #ffebee;
  color: #F44336;
}

.card-info {
  margin-bottom: 20rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.card-action {
  text-align: center;
}

.action-btn {
  width: 100%;
  padding: 25rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  text-align: center;
  border: none;
  font-weight: bold;
  background: #4CAF50;
  color: white;
}

.action-btn.completed {
  background: #2196F3;
}

.action-btn.disabled {
  background: #e0e0e0;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.loading-state {
  text-align: center;
  padding: 80rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}
